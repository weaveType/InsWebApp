    if (history.length > 1) {
        history.back();
    } else {
        scwin.goBackToList();
    }
};

// 공유하기
scwin.btnShare_onclick = function(e) {
    var title = dmp_postDetail.get("title") || "채용공고";
    var jobPostingId = dmp_postDetail.get("jobPostingId");
    
    if (navigator.share) {
        navigator.share({
            title: title,
            text: title + " - 채용공고",
            url: window.location.href
        });
    } else {
        // 공유 API 미지원 시 클립보드 복사
        navigator.clipboard.writeText(window.location.href).then(function() {
            alert("링크가 클립보드에 복사되었습니다.");
        }).catch(function() {
            // 클립보드 복사 실패 시 직접 표시
            prompt("아래 링크를 복사하세요:", window.location.href);
        });
    }
};

