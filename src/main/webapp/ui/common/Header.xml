		<script type="text/javascript"><![CDATA[// 헤더 UI 업데이트 함수
scwin.updateHeaderUI = function () {
    // 쿠키에서 사용자 정보 읽어오기
    var userInfoCookie = WebSquare.cookie.getCookie("userInfo");
    var userInfo = null;
    
    if (userInfoCookie) {
        try {
            userInfo = JSON.parse(userInfoCookie);
        } catch (e) {
            console.error("사용자 정보 파싱 오류:", e);
            userInfo = null;
        }
    }
    
    if (userInfo == null) {
        // 비로그인 상태
        txb_login.hide();
        btnLogin.show();
    } else {
        // 로그인 상태
        btnLogin.hide();
        txb_login.show();
        txb_login.setValue(userInfo.name + " 님");
    }
};

// 페이지 로드 시 초기 헤더 상태 설정
scwin.onpageload = function () {
    scwin.updateHeaderUI();
};

// 로그아웃
scwin.logout = function () {
    // 쿠키 삭제
    WebSquare.cookie.removeCookie("userInfo");
    scwin.updateHeaderUI();
    pf_main.setSrc("weaveRtpeMain.xml");
};

// 로그인 관련 팝업 호출 함수
scwin.btnLogin_onclick = function () {
    var loginPopupData = {
        "type": "json",
        "name": "login_param",
        "data": {
            "loginType": "main",
            "returnUrl": window.location.href
        }
    };

    // 팝업 생성 옵션 지정
    var options = {
        id: "login_popup",
        type: "wframePopup",
        width: "430px",
        height: "530px",
        modal: true,
        resizable: true,
        center: true,
        popupName: "로그인/회원가입",
        closeAction: "scwin.closeLoginPopup",
        dataObject: loginPopupData
    };

    // 팝업 생성
    $p.openPopup("../user/Login.xml", options);
};

scwin.weaveTypeLogo_onclick = function () {
    $p.url("/InsWebApp/ui/common/MainPage.xml");
};

scwin.menu1_onclick = function () {
    alert("매칭 페이지로 이동합니다.");
};

scwin.menu2_onclick = function () {
    alert("MBTI 검사 페이지로 이동합니다.");
};

scwin.menu3_onclick = function () {
    $p.url("../posting/PostList.xml");
};

scwin.btnEnterprise_onclick = function () {
    $p.url("CompanyMain.xml");
};

// 내 정보 페이지로 이동
scwin.goToUserDetail = function () {
};

// 기업 등록 페이지로 이동
scwin.goToCompanyRegister = function () {
    $p.url("../company/create_company.xml");
};

// 사용자 이름 클릭 시 로그아웃 (옵션)
scwin.txb_login_onclick = function () {
    if (confirm("로그아웃 하시겠습니까?")) {
        scwin.logout();
    }
};

// 로그인 팝업 닫기 콜백 함수
scwin.login_popup_closeAction = function (result) {
    console.log("팝업 클로즈 결과:", result);
    // 로그인 성공 시 결과 처리
    if (result && result.success) {
        // 헤더 UI 업데이트
        scwin.updateHeaderUI();

        // 권한별 페이지 이동
        var role = result.role;
        if (role === "USER") {
            pf_main.setSrc("weaveTypeMain.xml");
        } else if (role === "COMPANY") {
            $p.url("../corporate/RecruitmentDashboard.xml");
        } else if (role === "ADMIN") {

        } else {
            alert("알 수 없는 사용자 유형입니다. 관리자에게 문의하세요.");
        }
    }
    $p.closePopup("login_popup");
};]]></script>
		<style type="text/css"><![CDATA[
            /* 기본 설정 */
            * {
                box-sizing: border-box;
            }

            .main-wrap {
                width: 100%;
                background-color: #ffffff;
                font-family: "Malgun Gothic", "맑은 고딕", sans-serif;
            }

            /* 헤더 */
            .header {
                width: 100%;
                height: 70px;
                background-color: #ffffff;
                border-bottom: 1px solid #e0e0e0;
                position: relative;
                padding: 0 min(30px, 4vw);
            }

            .header-container {
                max-width: 1100px;
                width: 100%;
                margin: 0 auto;
                display: flex;
                justify-content: space-between;
                align-items: center;
                height: 100%;
            }

            .header-left {
                display: flex;
                align-items: center;
                gap: 15px;
            }

            /* 햄버거 메뉴 */
            .hamburger-menu {
                width: 24px;
                height: 24px;
                cursor: pointer;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                padding: 4px;
                border-radius: 4px;
                transition: background-color 0.2s ease;
            }

            .hamburger-menu:hover {
                background-color: #f5f5f5;
            }

            .hamburger-line {
                width: 16px;
                height: 2px;
                background-color: #333;
                margin: 1px 0;
                transition: 0.3s;
                border-radius: 1px;
            }

            /* 사이드 메뉴 */
            .side-menu {
                position: fixed;
                top: 70px;
                left: -300px;
                width: 280px;
                height: calc(100vh - 70px);
                background-color: white;
                box-shadow: 2px 0 10px rgba(0,0,0,0.1);
                transition: left 0.3s ease;
                z-index: 1000;
                overflow-y: auto;
                padding: 20px;
            }

            .side-menu.open {
                left: 0;
            }

            .side-menu-overlay {
                position: fixed;
                top: 70px;
                left: 0;
                width: 100%;
                height: calc(100vh - 70px);
                background-color: rgba(0,0,0,0.5);
                display: none;
                z-index: 999;
            }

            .side-menu-overlay.open {
                display: block;
            }

            .side-menu-title {
                font-size: 18px;
                font-weight: bold;
                color: #333;
                margin-bottom: 20px;
                padding-bottom: 15px;
                border-bottom: 1px solid #e0e0e0;
            }

            .side-menu-section {
                margin-bottom: 25px;
            }

            .side-menu-section-title {
                font-size: 14px;
                font-weight: 600;
                color: #666;
                margin-bottom: 10px;
            }

            .side-menu-item {
                display: block;
                padding: 12px 16px;
                margin-bottom: 2px;
                color: #333;
                text-decoration: none;
                border-radius: 6px;
                transition: background-color 0.2s ease;
                font-size: 14px;
            }

            .side-menu-item:hover {
                background-color: #f8f9fa;
                color: #007bff;
            }

            .nav-menu {
                display: inline-block;
                vertical-align: middle;
            }

            .nav-menu xf:image {
                vertical-align: middle;
                max-height: 34px;
            }

            .nav-link {
                font-size: 14px;
                color: #333;
                text-decoration: none;
                cursor: pointer;
                margin-right: 20px;
                vertical-align: middle;
            }

            .header-right {
                display:flex;
                float: right;
                padding-top: 18px;
                align-items: center;
            }

            .btn-login {
                background-color: #fff;
                border: 1px solid #ddd;
                padding: 6px 12px;
                border-radius: 4px;
                cursor: pointer;
                font-size: 12px;
                margin-right: 8px;
                height: 32px;
                vertical-align: middle;
            }

            .btn-enterprise {
                background-color: #333;
                color: #fff;
                border: none;
                padding: 6px 12px;
                border-radius: 4px;
                cursor: pointer;
                font-size: 12px;
                height: 32px;
                vertical-align: middle;
            }

            .clearfix::after {
                content: "";
                display: table;
                clear: both;
            }

            .login-area {
                width: 100%;
                background-color: #fff;
                padding: min(40px, 5vw);
                border-radius: 10px;
                border: 1px solid #e0e0e0;
            }

            .login-title {
                font-size: clamp(14px, 2vw, 16px);
                text-align: center;
                margin-bottom: 20px;
                color: #333;
                line-height: 1.4;
            }

            .btn-main-login {
                width: 100%;
                padding: 15px;
                background-color: #00c73c;
                color: #fff;
                border: none;
                border-radius: 5px;
                font-size: clamp(14px, 2vw, 16px);
                margin-bottom: 20px;
                cursor: pointer;
            }

            /* 모바일 반응형 */
            @media (max-width: 768px) {
                .header {
                    height: 60px;
                    padding: 0 15px;
                }
                
                .header-left, .header-right {
                    padding-top: 13px;
                }
                
                .nav-menu xf:image {
                    width: 100px !important;
                    height: 28px !important;
                }
                
                .nav-link {
                    display: none;
                }
                
                .search-input {
                    width: 100px;
                    font-size: 12px;
                    height: 20px;
                }
                
                .btn-login, .btn-enterprise {
                    padding: 5px 8px;
                    font-size: 11px;
                    height: 28px;
                }
            }
        ]]></style>
	</head>
	<body ev:onpageload="scwin.onpageload">
		<xf:group class="main-wrap">

			<!-- 헤더 영역 -->
			<xf:group class="header" tagname="header">
				<xf:group class="header-container">
					<xf:group class="header-left" style="">
