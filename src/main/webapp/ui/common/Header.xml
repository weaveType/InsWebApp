			<w2:dataCollection baseNode="map">
				<w2:dataMap id="dma_main" baseNode="map">
					<w2:keyInfo>
						<w2:key id="searchText" name="searchText" dataType="text" />
						<w2:key id="totalUsers" name="totalUsers" dataType="text" />
