                line-height: 1.4;
            }

            .card-link {
                color: #00c73c;
                font-size: clamp(11px, 1.5vw, 13px);
                cursor: pointer;
                text-decoration: none;
            }

            /* 포지션 카드 - 반응형 그리드 */
            .positions-container {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 20px;
                margin-top: 30px;
                max-width: 1000px;
                margin-left: auto;
                margin-right: auto;
            }

            .position-card {
                background-color: #fff;
                border-radius: 10px;
                padding: 20px;
                cursor: pointer;
                border: 1px solid #e0e0e0;
                transition: transform 0.2s ease, box-shadow 0.2s ease;
            }

            .position-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

            .position-header {
                width: 100%;
                height: 100px;
                border-radius: 5px;
                margin-bottom: 15px;
                position: relative;
            }

            .position-header-dark {
                background-color: #333;
            }

            .position-header-blue {
                background-color: #e3f2fd;
            }

            .position-status {
                position: absolute;
                top: 10px;
                right: 10px;
                font-size: 11px;
                padding: 2px 6px;
                border-radius: 3px;
                background-color: #e8f5e9;
                color: #00a832;
            }

            .position-company {
                font-size: clamp(12px, 1.8vw, 14px);
                color: #666;
                margin-bottom: 5px;
                text-align: left;
                display: block;
            }

            .position-title {
                font-size: clamp(14px, 2vw, 16px);
                font-weight: bold;
                color: #333;
                margin-bottom: 5px;
                text-align: left;
                display: block;
                line-height: 1.3;
            }

            .position-status-text {
                font-size: clamp(10px, 1.5vw, 12px);
                color: #666;
                text-align: left;
                display: block;
            }

            /* 회사 목록 - 반응형 그리드 */
            .companies-container {
                margin-top: 30px;
            }

            .company-row {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 20px;
                margin-bottom: 20px;
                max-width: 1000px;
                margin-left: auto;
                margin-right: auto;
            }

            .company-item {
                height: 80px;
                background-color: #f9f9f9;
                border-radius: 10px;
                border: 1px solid #e0e0e0;
                display: flex;
                align-items: center;
                justify-content: center;
                text-align: center;
                transition: transform 0.2s ease;
            }

            .company-item:hover {
                transform: translateY(-2px);
                box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            }

            .company-name {
                font-size: clamp(12px, 1.8vw, 14px);
                color: #333;
                padding: 0 10px;
                word-break: keep-all;
            }

            /* 푸터 */
            .footer {
                background-color: #f8f8f8;
                border-top: 1px solid #e0e0e0;
                padding: min(40px, 5vw) min(50px, 4vw);
            }

            .footer-title {
                font-size: clamp(18px, 3vw, 20px);
                font-weight: bold;
                color: #333;
                margin-bottom: 20px;
                display: block;
            }

            .footer-text {
                font-size: clamp(10px, 1.5vw, 12px);
                color: #666;
                line-height: 1.8;
                display: block;
                margin-bottom: 5px;
            }

            /* 태블릿 반응형 */
            @media (max-width: 1024px) {
                .header {
                    padding: 0 20px;
                }
                
                .nav-link {
                    margin-right: 15px;
                    font-size: 13px;
                }
                
                .search-input {
                    width: 120px;
                }

                .hero-container {
                    flex-direction: column;
                    gap: 20px;
                }

                .hero-right {
                    flex: none;
                    width: 100%;
                    max-width: 400px;
                    margin: 0 auto;
                }

                .cards-container {
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                }

                .positions-container {
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                }
            }

            /* 모바일 반응형 */
            @media (max-width: 768px) {
                .header {
                    height: 60px;
                    padding: 0 15px;
                }
                
                .header-left, .header-right {
                    padding-top: 13px;
                }
                
                .nav-menu xf:image {
                    width: 100px !important;
                    height: 28px !important;
                }
                
                .nav-link {
                    display: none;
                }
                
                .search-input {
                    width: 100px;
                    font-size: 12px;
                    height: 20px;
                }
                
                .btn-login, .btn-enterprise {
                    padding: 5px 8px;
                    font-size: 11px;
                    height: 28px;
                }

                .hero-section {
                    padding: 40px 15px;
                }

                .ad-area {
                    min-height: 280px;
                    padding: 40px 15px;
                }

                .cards-container {
                    grid-template-columns: 1fr;
                    gap: 15px;
                }

                .positions-container {
                    grid-template-columns: 1fr;
                    gap: 15px;
                }

                .company-row {
                    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                    gap: 15px;
                }

                .section {
                    padding: 40px 15px;
                }

                .section-title {
                    margin-bottom: 20px;
                }

                .section-subtitle {
                    margin-top: -10px;
                    margin-bottom: 20px;
                }
            }

            /* 작은 모바일 */
            @media (max-width: 480px) {
                .company-row {
                    grid-template-columns: 1fr;
                }

                .ad-area {
                    min-height: 250px;
                    padding: 30px 10px;
                }

                .card {
                    padding: 20px;
                    min-height: 220px;
                }

                .position-card {
                    padding: 15px;
                }
            }
        ]]></style>
