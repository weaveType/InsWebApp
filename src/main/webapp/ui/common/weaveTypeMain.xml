/**
* 반응형 가운데 정렬 위치 및 크기 계산 메서드
* @param {Object} options - 설정 옵션
* @param {number} options.maxWidth - 최대 너비 (기본값: 800)
* @param {number} options.minWidth - 최소 너비 (기본값: 400)
* @param {number} options.maxHeight - 최대 높이 (기본값: 600)
* @param {number} options.minHeight - 최소 높이 (기본값: 300)
* @param {number} options.widthRatio - 화면 대비 너비 비율 (기본값: 0.8)
* @param {number} options.heightRatio - 화면 대비 높이 비율 (기본값: 0.8)
* @returns {Object} {width, height, left, top} 값을 포함한 객체
*/
scwin.getResponsiveCenterPosition = function(options) {
   options = options || {};
   
   var browserWidth = window.innerWidth || document.documentElement.clientWidth;
   var browserHeight = window.innerHeight || document.documentElement.clientHeight;
   
   // 화면 크기의 비율로 팝업 크기 설정 (최대/최소 크기 제한)
   var popupWidth = Math.min(
       options.maxWidth || 800, 
       Math.max(options.minWidth || 400, browserWidth * (options.widthRatio || 0.8))
   );
   var popupHeight = Math.min(
       options.maxHeight || 600, 
       Math.max(options.minHeight || 300, browserHeight * (options.heightRatio || 0.8))
   );
   
   // 가운데 위치 계산
   var leftPos = (browserWidth - popupWidth) / 2;
   var topPos = (browserHeight - popupHeight) / 2;
   
   return {
       width: popupWidth,
       height: popupHeight,
       left: leftPos,
       top: topPos
   };
};]]></script>
