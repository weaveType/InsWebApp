/**
 * 회사 목록 조회
 */
scwin.loadCompanyList = function () {
    // role_id=2 (COMPANY) 사용자들 조회
    dmp_corporateSearchVo.set("roleId", 2);
    dmp_corporateSearchVo.set("pageIndex", 1);
    dmp_corporateSearchVo.set("pageSize", 12);

    // 서버 통신 실행
    $c.sbm.execute(sbm_selectCompanyList);
};

/**
 * 회사 목록 조회 성공 콜백
 */
scwin.sbm_selectCompanyList_submitdone = function (e) {
    // 응답 데이터 확인
    var elHeader = e.responseJSON.elHeader;

    if (elHeader && elHeader.resSuc === false) {
        $c.win.alert(`에러코드: ${elHeader.resCode}\n에러메시지: ${elHeader.resMsg}`);
        return false;
    }

    // 총 회사 수 업데이트
    var totalCount = e.responseJSON.elData.totalCount;

    // txt_company_count 컴포넌트 찾기 및 업데이트
    try {
        if (txt_company_count && txt_company_count.setLabel) {
            txt_company_count.setLabel(`참여 기업: ${totalCount}개`);
        } else {
            console.warn('txt_company_count 컴포넌트를 찾을 수 없습니다.');
        }
    } catch (error) {
        console.error('회사 수 업데이트 오류:', error);
    }

    // 동적으로 회사 목록 생성 (약간의 지연 후 실행)
    setTimeout(function () {
        createCompanyList();
    }, 200);
};

/**
 * 회사 목록 조회 에러 콜백
 */
sbm_selectCompanyList_submiterror = function (e) {
    console.error("회사 목록 조회 실패:", e);
    $c.win.alert("회사 목록을 불러오는데 실패했습니다.");
};

createCompanyList = function () {
    // WebSquare 컴포넌트 객체 가져오기
    var containerComponent = grp_companies_container;
    if (!containerComponent) {
        console.error('회사 목록 컨테이너 컴포넌트를 찾을 수 없습니다.');
        return;
    }

    // setTimeout을 사용해서 렌더링 완료 후 실행
    setTimeout(function () {
        try {
            var container = document.querySelector('.companies-container');

            // 기존 내용 제거
            container.innerHTML = '';

            // DataList에서 데이터 가져오기
            var rowCount = dlt_company_list.getRowCount();

            if (rowCount === 0) {
                container.innerHTML = '<xf:group style="text-align: center; padding: 40px; color: #666; font-size: 16px;">등록된 기업이 없습니다.</xf:group>';
                return;
            }

            // 회사 데이터를 그룹화하여 행별로 표시 (한 행에 4개씩)
            var companiesPerRow = 4;
            var currentRow = null;

            for (var i = 0; i < rowCount; i++) {
                // 새로운 행 생성 (4개마다)
                if (i % companiesPerRow === 0) {
                    currentRow = document.createElement('xf:group');
                    currentRow.className = 'company-row';
                    container.appendChild(currentRow);
                }

                // 회사 데이터 가져오기
                var companyData = {
                    userId: dlt_company_list.getCellData(i, 'userId'),
                    name: dlt_company_list.getCellData(i, 'name') || '회사명 없음',
                    logoFileName: dlt_company_list.getCellData(i, 'logoFileName')
                };

                // ── 회사 카드 요소 생성 ─────────────────────────────
                var companyCard = document.createElement('xf:group');
                companyCard.className = 'company-item';
                companyCard.style.cursor = 'pointer';

                // 로고 경로(있으면) vs 기본 이미지(없으면)
                var logoBase = '/InsWebApp/images/company/'; // 실제 로고가 저장된 폴더
                var defaultLogo = '/InsWebApp/images/ws5/sik.gif';   // 기본 이미지

                var hasLogo = companyData.logoFileName && companyData.logoFileName.trim() !== '';
                var imgSrc = hasLogo ? logoBase + encodeURIComponent(companyData.logoFileName)
                    : defaultLogo;

                // 카드 HTML
                var cardContent =
                    '<xf:group style="display:flex;align-items:center;justify-content:center;height:100%;gap:10px;">' +
                    '<img src="' + imgSrc + '" ' +
                    'style="max-width:100%;max-height:100%;width:auto;height:auto;object-fit:contain;" ' +
                    // 깨졌을 때도 기본 이미지로 대체
                    'onerror="this.onerror=null;this.src=\'' + defaultLogo + '\';" ' +
                    'alt="' + companyData.name + ' 로고" />' +
                    '<span class="company-name" style="font-weight:500;">' + companyData.name + '</span>' +
                    '</xf:group>';

                companyCard.innerHTML = cardContent;

                // 클릭 이벤트 추가 (클로저 사용하여 데이터 바인딩)
                (function (data) {
                    companyCard.addEventListener('click', function () {
                        scwin.onCompanyCardClick(data);
                    });
                })(companyData);

                // 호버 효과 추가
                companyCard.addEventListener('mouseenter', function () {
                    this.style.backgroundColor = '#f8fbff';
                    this.style.borderColor = '#007bff';
                });

                companyCard.addEventListener('mouseleave', function () {
                    this.style.backgroundColor = '#fff';
                    this.style.borderColor = '#e8f0fe';
                });

                // 현재 행에 카드 추가
                currentRow.appendChild(companyCard);
            }

        } catch (error) {
            console.error('회사 목록 생성 중 오류 발생:', error);
        }
    }, 100); // 100ms 후 실행
};


/* 회사 카드 클릭 이벤트 핸들러 */
scwin.onCompanyCardClick = function (companyData) {
    // 회사 상세 정보 팝업 또는 페이지 이동
    console.log("선택된 회사:", companyData);

    $c.win.alert(companyData.name + " 해당 기업의 공고등록 페이지로 이동합니다.\n(userId: " + companyData.userId + ")");
};

scwin.refreshCompanyList = function () {
    scwin.loadCompanyList();
};]]></script>
