scwin.sbm_selectPostingList_submitdone = function (e) {
    gen_position_card.removeAll();
    var rowCount = dlt_posting_list.getRowCount();
    for (var i = 0; i < rowCount; i++) {
        gen_position_card.insertChild();
        var name = dlt_posting_list.getCellData(i, "name");
        var location = dlt_posting_list.getCellData(i, "location");
        var experienceLevel = dlt_posting_list.getCellData(i, "experienceLevel");
        var preferredDeveloperTypesRaw = dlt_posting_list.getCellData(i, "preferredDeveloperTypes");

        var txt_name = gen_position_card.getChild(i, "txt_name");
        var txt_title = gen_position_card.getChild(i, "txt_title");

        txt_name.setValue(name);
        txt_title.setValue(location + " · " + experienceLevel);

        // Helper function to escape HTML special characters
        function escapeHtml(text) {
            var div = document.createElement('div');
            div.appendChild(document.createTextNode(text));
            return div.innerHTML;
        }

        // 태그 처리 로직
        try {
            var preferredDeveloperTypes = JSON.parse(preferredDeveloperTypesRaw || '[]');
            for (var j = 1; j <= 4; j++) {
                var tag = gen_position_card.getChild(i, "tag" + j);
                if (j <= preferredDeveloperTypes.length) {
                    tag.setValue(escapeHtml(preferredDeveloperTypes[j - 1])); // Apply escaping here
                    tag.show();
                } else {
                    tag.hide();
                }
            }
        } catch (err) {
            console.error("preferredDeveloperTypes 파싱 오류: ", preferredDeveloperTypesRaw, err);
            // 파싱 실패 시 모든 태그 숨김
            for (var j = 1; j <= 4; j++) {
                gen_position_card.getChild(i, "tag" + j).hide();
            }
        }
    }
};
