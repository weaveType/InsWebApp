        <script type="text/javascript"><![CDATA[// 전역 사용자 정보 변수
var globalUserInfo = null;

// 사용자 정보 설정 함수
scwin.setUserInfo = function(userInfo) {
    globalUserInfo = userInfo;
};

// 사용자 정보 조회 함수
scwin.getUserInfo = function() {
    return globalUserInfo;
};

scwin.getuserEmail = function() {
    return globalUserInfo.email;
}

// 페이지 로드 시 팝업 닫기 액션 함수들 정의
scwin.onpageload = function () {
};

// 로그인 관련 팝업 호출 함수들
scwin.btnLogin_onclick = function () {
    
    // 로그인 팝업에 전달할 데이터
    var loginPopupData = {
        "type": "json",
        "name": "login_param",
        "data": {
            "loginType": "main",
            "returnUrl": window.location.href
        }
    };
    // 팝업 생성 옵션 지정
    var options = {
        id: "login_popup",
        type: "wframePopup",
        width: "430px",
        height: "530px",
        modal: true,
        resizable: true,
        center: true,
        popupName: "로그인/회원가입",
        closeAction: "scwin.login_popup_closeAction",
        dataObject: loginPopupData
    };

    // 팝업 생성
    $p.openPopup("../user/Login.xml", options);
};

scwin.ad_onclick = function (e) {
    // 광고 클릭 로그인 팝업에 전달할 데이터
    var adLoginPopupData = {
        "type": "json",
        "name": "login_param",
        "data": {
            "loginType": "ad_click",
            "returnUrl": window.location.href,
            "source": "hero_ad_banner"
        }
    };

    // 팝업 생성 옵션 지정
    var options = {
        id: "ad_login_popup",
        type: "wframePopup",
        width: "460px",
        height: "475px",
        modal: true,
        resizable: true,
        center: true,
        popupName: "로그인",
        closeAction: "scwin.login_popup_closeAction",
        dataObject: adLoginPopupData
    };

    // 팝업 생성
    $p.openPopup("../user/Login.xml", options);
};

// 기타 함수들은 그대로 유지
scwin.weaveTypeLogo_onclick = function () {
    pf_main.setSrc("weaveRtpeMain.xml");
};

scwin.menu1_onclick = function () {
    alert("매칭 페이지로 이동합니다.");
};

scwin.menu2_onclick = function () {
    alert("MBTI 검사 페이지로 이동합니다.");
};

scwin.menu3_onclick = function () {
    pf_main.setSrc("../posting/PostList.xml");
};

scwin.btnEnterprise_onclick = function () {
    pf_main.setSrc("CompanyMain.xml");
};


// 사이드 메뉴 닫기
scwin.closeSideMenu = function () {
    var sideMenu = document.getElementById('sideMenu');
    var overlay = document.getElementById('sideMenuOverlay');

    sideMenu.classList.remove('open');
    overlay.classList.remove('open');
};

// 내 정보 페이지로 이동
scwin.goToUserDetail = function () {
    $p.url("../user/UserDetail.xml");
    scwin.closeSideMenu();
};

// 기업 등록 페이지로 이동
scwin.goToCompanyRegister = function () {
    location.href = '/websquare/websquare.html?w2xPath=/ui/create_company.xml';
    scwin.closeSideMenu();
};]]></script>
        <style type="text/css"><![CDATA[
            /* 기본 설정 */
            * {
                box-sizing: border-box;
            }

            .main-wrap {
                width: 100%;
                background-color: #ffffff;
                font-family: "Malgun Gothic", "맑은 고딕", sans-serif;
            }

            /* 헤더 */
            .header {
                width: 100%;
                height: 70px;
                background-color: #ffffff;
                border-bottom: 1px solid #e0e0e0;
                position: relative;
                padding: 0 min(30px, 4vw);
            }

            .header-left {
                float: left;
                padding-top: 18px;
                display: flex;
                align-items: center;
                gap: 15px;
            }

            /* 햄버거 메뉴 */
            .hamburger-menu {
                width: 24px;
                height: 24px;
                cursor: pointer;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                padding: 4px;
                border-radius: 4px;
                transition: background-color 0.2s ease;
            }

            .hamburger-menu:hover {
                background-color: #f5f5f5;
            }

            .hamburger-line {
                width: 16px;
                height: 2px;
                background-color: #333;
                margin: 1px 0;
                transition: 0.3s;
                border-radius: 1px;
            }

            /* 사이드 메뉴 */
            .side-menu {
                position: fixed;
                top: 70px;
                left: -300px;
                width: 280px;
                height: calc(100vh - 70px);
                background-color: white;
                box-shadow: 2px 0 10px rgba(0,0,0,0.1);
                transition: left 0.3s ease;
                z-index: 1000;
                overflow-y: auto;
                padding: 20px;
            }

            .side-menu.open {
                left: 0;
            }

            .side-menu-overlay {
                position: fixed;
                top: 70px;
                left: 0;
                width: 100%;
                height: calc(100vh - 70px);
                background-color: rgba(0,0,0,0.5);
                display: none;
                z-index: 999;
            }

            .side-menu-overlay.open {
                display: block;
            }

            .side-menu-title {
                font-size: 18px;
                font-weight: bold;
                color: #333;
                margin-bottom: 20px;
                padding-bottom: 15px;
                border-bottom: 1px solid #e0e0e0;
            }

            .side-menu-section {
                margin-bottom: 25px;
            }

            .side-menu-section-title {
                font-size: 14px;
                font-weight: 600;
                color: #666;
                margin-bottom: 10px;
            }

            .side-menu-item {
                display: block;
                padding: 12px 16px;
                margin-bottom: 2px;
                color: #333;
                text-decoration: none;
                border-radius: 6px;
                transition: background-color 0.2s ease;
                font-size: 14px;
            }

            .side-menu-item:hover {
                background-color: #f8f9fa;
                color: #007bff;
            }

            .nav-menu {
                display: inline-block;
                vertical-align: middle;
            }

            .nav-menu xf:image {
                vertical-align: middle;
                max-height: 34px;
            }

            .nav-link {
                font-size: 14px;
                color: #333;
                text-decoration: none;
                cursor: pointer;
                margin-right: 20px;
                vertical-align: middle;
            }

            .header-right {
                float: right;
                padding-top: 18px;
            }

            .search-container {
                display: inline-block;
                background-color: #f5f5f5;
                border-radius: 20px;
                padding: 6px 15px;
                margin-right: 10px;
                vertical-align: middle;
            }

            .search-input {
                border: none;
                background: transparent;
                width: 150px;
                outline: none;
                font-size: 13px;
                height: 24px;
                vertical-align: middle;
            }

            .search-input::placeholder {
                color: #999;
                font-size: 13px;
            }

            .search-btn {
                border: none;
                background: none;
                cursor: pointer;
                margin-left: 8px;
                font-size: 14px;
                vertical-align: middle;
            }

            .btn-login {
                background-color: #fff;
                border: 1px solid #ddd;
                padding: 6px 12px;
                border-radius: 4px;
                cursor: pointer;
                font-size: 12px;
                margin-right: 8px;
                height: 32px;
                vertical-align: middle;
            }

            .btn-enterprise {
                background-color: #333;
                color: #fff;
                border: none;
                padding: 6px 12px;
                border-radius: 4px;
                cursor: pointer;
                font-size: 12px;
                height: 32px;
                vertical-align: middle;
            }

            .clearfix::after {
                content: "";
                display: table;
                clear: both;
            }

            /* 메인 히어로 섹션 - 완전 반응형 */
            .hero-section {
                background-color: #f8f8f8;
                padding: min(60px, 8vw) min(30px, 4vw);
            }

            .hero-container {
                max-width: 1100px;
                width: 100%;
                margin: 0 auto;
                display: flex;
                gap: 30px;
                align-items: flex-start;
            }

            .hero-left {
                flex: 1;
                min-width: 0;
            }

            .hero-right {
                flex: 0 0 400px;
                min-width: 280px;
            }

            .ad-area {
                width: 100%;
                min-height: 350px;
                background-color: #667eea;
                border-radius: 10px;
                cursor: pointer;
                text-align: center;
                padding: min(80px, 10vw) 20px 40px;
                display: flex;
                flex-direction: column;
                justify-content: center;
            }

            .ad-title {
                font-size: clamp(24px, 4vw, 32px);
                color: #fff;
                font-weight: bold;
                margin-bottom: 10px;
                display: block;
                line-height: 1.2;
            }

            .ad-subtitle {
                font-size: clamp(14px, 2.5vw, 18px);
                color: #fff;
                margin-bottom: 30px;
                display: block;
                line-height: 1.4;
            }

            .ad-button {
                background-color: #fff;
                color: #667eea;
                border: none;
                padding: 15px 40px;
                border-radius: 30px;
                font-size: clamp(14px, 2vw, 16px);
                font-weight: bold;
                cursor: pointer;
                margin: 0 auto;
                width: fit-content;
            }

            .login-area {
                width: 100%;
                background-color: #fff;
                padding: min(40px, 5vw);
                border-radius: 10px;
                border: 1px solid #e0e0e0;
            }

            .login-title {
                font-size: clamp(14px, 2vw, 16px);
                text-align: center;
                margin-bottom: 20px;
                color: #333;
                line-height: 1.4;
            }

            .btn-main-login {
                width: 100%;
                padding: 15px;
                background-color: #00c73c;
                color: #fff;
                border: none;
                border-radius: 5px;
                font-size: clamp(14px, 2vw, 16px);
                margin-bottom: 20px;
                cursor: pointer;
            }

            .gift-area {
                background-color: #f0fff5;
                padding: 20px;
                border-radius: 5px;
                text-align: center;
            }

            .gift-text {
                font-size: clamp(12px, 1.8vw, 14px);
                color: #00a832;
                margin-bottom: 5px;
                display: block;
                line-height: 1.4;
            }

            .gift-text-bold {
                font-size: clamp(12px, 1.8vw, 14px);
                color: #00a832;
                font-weight: bold;
                margin-bottom: 5px;
                display: block;
                line-height: 1.4;
            }

            .gift-icon {
                font-size: clamp(24px, 4vw, 32px);
                margin-top: 10px;
                display: block;
            }

            /* 섹션 공통 - 반응형 패딩 */
            .section {
                padding: min(60px, 8vw) min(50px, 4vw);
            }

            .section-white {
                background-color: #fff;
            }

            .section-gray {
                background-color: #f8f8f8;
            }

            .section-title {
                font-size: clamp(20px, 3vw, 24px);
                font-weight: bold;
                color: #333;
                margin-bottom: 30px;
                text-align: center;
            }

            .section-subtitle {
                font-size: clamp(14px, 2vw, 16px);
                color: #666;
                text-align: center;
                margin-top: -20px;
                margin-bottom: 30px;
            }

            /* 카드 - 완전 반응형 그리드 */
            .cards-container {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 20px;
                margin-top: 30px;
                max-width: 1000px;
                margin-left: auto;
                margin-right: auto;
            }

            .card {
                background-color: #e8f5e9;
                border-radius: 10px;
                padding: 30px;
                text-align: center;
                cursor: pointer;
                transition: transform 0.2s ease;
                min-height: 250px;
                display: flex;
                flex-direction: column;
                justify-content: center;
            }

            .card:hover {
                transform: translateY(-5px);
            }

            .card-green {
                background-color: #e8f5e9;
            }

            .card-orange {
                background-color: #fff3e0;
            }

            .card-blue {
                background-color: #e3f2fd;
            }

            .card-icon {
                width: 80px;
                height: 80px;
                border-radius: 10px;
                margin: 0 auto 20px;
            }

            .card-icon-green {
                background-color: #c8e6c9;
            }

            .card-icon-orange {
                background-color: #ffe0b2;
            }

            .card-icon-blue {
                background-color: #bbdefb;
            }

            .card-title {
                font-size: clamp(16px, 2.5vw, 18px);
                font-weight: bold;
                color: #333;
                margin-bottom: 10px;
                display: block;
            }

            .card-text {
                font-size: clamp(14px, 2vw, 16px);
                color: #333;
                margin-bottom: 5px;
                display: block;
                line-height: 1.4;
            }

            .card-small-text {
                font-size: clamp(11px, 1.5vw, 13px);
                color: #666;
                margin-bottom: 10px;
                display: block;
                line-height: 1.4;
            }

            .card-link {
                color: #00c73c;
                font-size: clamp(11px, 1.5vw, 13px);
                cursor: pointer;
                text-decoration: none;
            }

            /* 포지션 카드 - 반응형 그리드 */
            .positions-container {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 20px;
                margin-top: 30px;
                max-width: 1000px;
                margin-left: auto;
                margin-right: auto;
            }

            .position-card {
                background-color: #fff;
                border-radius: 10px;
                padding: 20px;
                cursor: pointer;
                border: 1px solid #e0e0e0;
                transition: transform 0.2s ease, box-shadow 0.2s ease;
            }

            .position-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

            .position-header {
                width: 100%;
                height: 100px;
                border-radius: 5px;
                margin-bottom: 15px;
                position: relative;
            }

            .position-header-dark {
                background-color: #333;
            }

            .position-header-blue {
                background-color: #e3f2fd;
            }

            .position-status {
                position: absolute;
                top: 10px;
                right: 10px;
                font-size: 11px;
                padding: 2px 6px;
                border-radius: 3px;
                background-color: #e8f5e9;
                color: #00a832;
            }

            .position-company {
                font-size: clamp(12px, 1.8vw, 14px);
                color: #666;
                margin-bottom: 5px;
                text-align: left;
                display: block;
            }

            .position-title {
                font-size: clamp(14px, 2vw, 16px);
                font-weight: bold;
                color: #333;
                margin-bottom: 5px;
                text-align: left;
                display: block;
                line-height: 1.3;
            }

            .position-status-text {
                font-size: clamp(10px, 1.5vw, 12px);
                color: #666;
                text-align: left;
                display: block;
            }

            /* 회사 목록 - 반응형 그리드 */
            .companies-container {
                margin-top: 30px;
            }

            .company-row {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 20px;
                margin-bottom: 20px;
                max-width: 1000px;
                margin-left: auto;
                margin-right: auto;
            }

            .company-item {
                height: 80px;
                background-color: #f9f9f9;
                border-radius: 10px;
                border: 1px solid #e0e0e0;
                display: flex;
                align-items: center;
                justify-content: center;
                text-align: center;
                transition: transform 0.2s ease;
            }

            .company-item:hover {
                transform: translateY(-2px);
                box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            }

            .company-name {
                font-size: clamp(12px, 1.8vw, 14px);
                color: #333;
                padding: 0 10px;
                word-break: keep-all;
            }

            /* 푸터 */
            .footer {
                background-color: #f8f8f8;
                border-top: 1px solid #e0e0e0;
                padding: min(40px, 5vw) min(50px, 4vw);
            }

            .footer-title {
                font-size: clamp(18px, 3vw, 20px);
                font-weight: bold;
                color: #333;
                margin-bottom: 20px;
                display: block;
            }

            .footer-text {
                font-size: clamp(10px, 1.5vw, 12px);
                color: #666;
                line-height: 1.8;
                display: block;
                margin-bottom: 5px;
            }

            /* 태블릿 반응형 */
            @media (max-width: 1024px) {
                .header {
                    padding: 0 20px;
                }
                
                .nav-link {
                    margin-right: 15px;
                    font-size: 13px;
                }
                
                .search-input {
                    width: 120px;
                }

                .hero-container {
                    flex-direction: column;
                    gap: 20px;
                }

                .hero-right {
                    flex: none;
                    width: 100%;
                    max-width: 400px;
                    margin: 0 auto;
                }

                .cards-container {
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                }

                .positions-container {
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                }
            }

            /* 모바일 반응형 */
            @media (max-width: 768px) {
                .header {
                    height: 60px;
                    padding: 0 15px;
                }
                
                .header-left, .header-right {
                    padding-top: 13px;
                }
                
                .nav-menu xf:image {
                    width: 100px !important;
                    height: 28px !important;
                }
                
                .nav-link {
                    display: none;
                }
                
                .search-input {
                    width: 100px;
                    font-size: 12px;
                    height: 20px;
                }
                
                .btn-login, .btn-enterprise {
                    padding: 5px 8px;
                    font-size: 11px;
                    height: 28px;
                }

                .hero-section {
                    padding: 40px 15px;
                }

                .ad-area {
                    min-height: 280px;
                    padding: 40px 15px;
                }

                .cards-container {
                    grid-template-columns: 1fr;
                    gap: 15px;
                }

                .positions-container {
                    grid-template-columns: 1fr;
                    gap: 15px;
                }

                .company-row {
                    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                    gap: 15px;
                }

                .section {
                    padding: 40px 15px;
                }

                .section-title {
                    margin-bottom: 20px;
                }

                .section-subtitle {
                    margin-top: -10px;
                    margin-bottom: 20px;
                }
            }

            /* 작은 모바일 */
            @media (max-width: 480px) {
                .company-row {
                    grid-template-columns: 1fr;
                }

                .ad-area {
                    min-height: 250px;
                    padding: 30px 10px;
                }

                .card {
                    padding: 20px;
                    min-height: 220px;
                }

                .position-card {
                    padding: 15px;
                }
            }
        ]]></style>
