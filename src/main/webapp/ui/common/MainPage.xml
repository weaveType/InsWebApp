                    padding: 40px 15px;
                }

                .ad-area {
                    min-height: 280px;
                    padding: 40px 15px;
                }

                .cards-container {
                    grid-template-columns: 1fr;
                    gap: 15px;
                }

                .positions-container {
                    grid-template-columns: 1fr;
                    gap: 15px;
                }

                .company-row {
                    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
                    gap: 15px;
                }

                .section {
                    padding: 40px 15px;
                }

                .section-title {
                    margin-bottom: 20px;
                }

                .section-subtitle {
                    margin-top: -10px;
                    margin-bottom: 20px;
                }
            }

            /* 프로필 영역 스타일 */
            .profile-area {
                width: 100%;
                min-height: 350px;
                background-color: #fff;
                padding: 20px;
                border-radius: 10px;
                border: 1px solid #e0e0e0;
            }

            .profile-header {
                display: flex;
                align-items: center;
                margin-bottom: 20px;
                gap: 12px;
            }

            .profile-avatar {
                flex-shrink: 0;
            }

            .profile-info {
                flex: 1;
            }

            .profile-name {
                font-size: 18px;
                font-weight: bold;
                color: #333;
                margin-bottom: 5px;
                display: block;
            }

            .profile-matching-status {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .matching-status-text {
                font-size: 14px;
                color: #666;
            }

            .profile-completion {
                margin-bottom: 20px;
            }

            .completion-text {
                font-size: 12px;
                color: #666;
                line-height: 1.4;
            }

            .matching-status-section {
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                padding: 15px;
                margin-bottom: 15px;
            }

            .matching-status-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 15px;
            }

            .matching-status-title {
                font-size: 16px;
                font-weight: bold;
                color: #333;
            }

            .matching-settings-link {
                font-size: 12px;
                color: #007bff;
                text-decoration: none;
                cursor: pointer;
            }

            .profile-progress {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 8px;
            }

            .progress-label {
                font-size: 14px;
                color: #666;
            }

            .progress-percent {
                font-size: 14px;
                color: #666;
            }

            .progress-bar {
                width: 100%;
                height: 8px;
                background-color: #e0e0e0;
                border-radius: 4px;
                overflow: hidden;
                margin-bottom: 15px;
            }

            .progress-fill {
                height: 100%;
                background: linear-gradient(90deg, #00d4ff, #2ecc71);
                transition: width 0.3s ease;
            }

            .stats-section {
                display: grid;
                grid-template-columns: 1fr 1fr 1fr;
                gap: 15px;
                padding: 0 5px;
            }

            .stats-item {
                text-align: center;
            }

            .stats-number {
                font-size: 24px;
                font-weight: bold;
                color: #333;
                margin-bottom: 5px;
                display: block;
            }

            .stats-label {
                font-size: 12px;
                color: #666;
            }

            /* 작은 모바일 */
            @media (max-width: 480px) {
                .company-row {
                    grid-template-columns: 1fr;
                }

                .ad-area {
                    min-height: 250px;
                    padding: 30px 10px;
                }

                .card {
                    padding: 20px;
                    min-height: 220px;
                }

                .position-card {
                    padding: 15px;
                }

                .profile-area {
                    padding: 15px;
                }

                .profile-header {
                    flex-direction: column;
                    text-align: center;
                    gap: 10px;
                }

                .profile-matching-status {
                    justify-content: center;
                }

                .matching-status-header {
                    flex-direction: column;
                    gap: 10px;
                    text-align: center;
                }

                .stats-section {
                    grid-template-columns: 1fr;
                    gap: 10px;
                }
            }
        ]]></style>
