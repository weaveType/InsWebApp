/**
 * 회사 목록 조회 성공 콜백
 */
scwin.sbm_selectCompanyList_submitdone = function (e) {
    // 응답 데이터 확인
    var elHeader = e.responseJSON.elHeader;

    if (elHeader && elHeader.resSuc === false) {
        $c.win.alert(`에러코드: ${elHeader.resCode}\n에러메시지: ${elHeader.resMsg}`);
        return false;
    }

    // 총 회사 수 업데이트
    var totalCount = e.responseJSON.elData.totalCount;

    // txt_company_count 컴포넌트 찾기 및 업데이트
    try {
        if (txt_company_count && txt_company_count.setLabel) {
            txt_company_count.setLabel(`참여 기업: ${totalCount}개`);
        } else {
            console.warn('txt_company_count 컴포넌트를 찾을 수 없습니다.');
        }
    } catch (error) {
        console.error('회사 수 업데이트 오류:', error);
    }

    // 동적으로 회사 목록 생성 (약간의 지연 후 실행)
    createCompanyList();
};

createCompanyList = function () {
    // WebSquare 컴포넌트 객체 가져오기
    var containerComponent = gen_company_card;
    if (!containerComponent) {
        console.error('회사 목록 컨테이너 컴포넌트를 찾을 수 없습니다.');
        return;
    }

    // 기존 내용 제거
    gen_company_card.removeAll();

    // DataList에서 데이터 가져오기
    var rowCount = dlt_company_list.getRowCount();

    if (rowCount === 0) {
        // 제너레이터 내부에 메시지 표시 (필요시)
        // gen_company_card.insertChild(); // 빈 항목 추가
        // var msgTxt = gen_company_card.getChild(0, "txt_no_company"); // 템플릿에 txt_no_company 추가 필요
        // if(msgTxt) msgTxt.setValue("등록된 기업이 없습니다.");
        console.log("등록된 기업이 없습니다.");
        return;
    }

    // 로고 경로 및 기본 이미지 설정
    var logoBase = '/InsWebApp/images/company/'; // 실제 로고가 저장된 폴더
    var defaultLogo = '/InsWebApp/images/ws5/default_company.png';   // 기본 이미지

    for (var i = 0; i < rowCount; i++) {
        gen_company_card.insertChild();

        // 회사 데이터 가져오기
        var companyData = {
            userId: dlt_company_list.getCellData(i, 'userId'),
            name: dlt_company_list.getCellData(i, 'name') || '회사명 없음',
            logoFileName: dlt_company_list.getCellData(i, 'logoFileName')
        };

        var img_company_logo = gen_company_card.getChild(i, "img_company_logo");
        var txt_company_name = gen_company_card.getChild(i, "txt_company_name");

        // 이미지 설정
        var hasLogo = companyData.logoFileName && companyData.logoFileName.trim() !== '';
        var imgSrc = hasLogo ? logoBase + companyData.logoFileName : defaultLogo;
        img_company_logo.setSrc(imgSrc);
        // onerror 처리는 WebSquare image 컴포넌트의 속성으로 처리하거나, 직접 DOM 접근이 필요할 수 있습니다.
        // 현재 WebSquare image 컴포넌트의 onerror 속성 지원 여부를 확인해야 합니다.
        // 임시로, 이미지 로드 실패 시 기본 이미지로 대체하는 로직은 WebSquare 컴포넌트 자체의 기능에 의존합니다.

        // 회사명 설정
        txt_company_name.setValue(companyData.name);

        // 호버 효과는 CSS로 처리하는 것이 좋습니다.
        // 클릭 이벤트는 generator 내부의 trigger 컴포넌트에서 처리됩니다.
    }

};

/* 회사 카드 클릭 이벤트 핸들러 */
scwin.onCompanyCardClick = function (companyData) {
    $c.win.alert(companyData.name + " 해당 기업의 공고등록 페이지로 이동합니다.\n(userId: " + companyData.userId + ")");
};

