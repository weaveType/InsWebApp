		<script type="text/javascript"><![CDATA[// 페이지 로드 시 팝업 닫기 액션 함수들 정의
scwin.onpageload = function () {
    scwin.userInfo = null;
    var userInfoStr = WebSquare.cookie.getCookie("userInfo");
    var userInfo;

    try {
        userInfo = JSON.parse(userInfoStr);
    } catch (e) {
        userInfo = null;
    }
    

    // 로그인 상태 확인 및 UI 업데이트
    scwin.updateLoginArea();

    // 공고 목록 조회
    $c.sbm.execute(sbm_selectPostingList);

    // 회사 목록 조회
    scwin.loadCompanyList();
};

// 로그인 영역 업데이트
scwin.updateLoginArea = function () {
    var userInfoCookie = WebSquare.cookie.getCookie("userInfo");
    var userInfo = null;
    if (userInfoCookie) {
        try {
            userInfo = JSON.parse(userInfoCookie);
        } catch (e) {
            console.error("사용자 정보 파싱 오류:", e);
            userInfo = null;
        }
    }

    if (userInfo != null) {
        // 로그인 상태 - 프로필 영역 표시
        grp_login_area.hide();
        grp_profile_area.show();

        // 사용자 정보 업데이트
        txb_user_name.setValue(userInfo.name + "님");

        // 성향분석 및 코드분석 여부
        dmp_matchingCheckedVo.set("accountId", userInfo.accountId);
        $c.sbm.execute(smb_selectMatchingChecked);

    } else {
        // 비로그인 상태 - 로그인 영역 표시
        grp_login_area.show();
        grp_profile_area.hide();
    }
};

scwin.smb_selectMatchingChecked_submitdone = function (e) {
    var elHeader = e.responseJSON.elHeader;
    if (elHeader && elHeader.resSuc === false) {
        console.error("매칭 정보 조회 실패:", elHeader.resMsg);
        return;
    }

    var isMbtiChecked = dmp_matchingCheckedVo.get("isMbtiChecked");
    var isCodeChecked = dmp_matchingCheckedVo.get("isCodeChecked");

    console.log("isMbtiChecked:", isMbtiChecked);
    console.log("isCodeChecked:", isCodeChecked);

    // 여기에 isMbtiChecked와 isCodeChecked 값에 따라 UI를 업데이트하는 로직을 추가합니다.
    // 예: 특정 아이콘의 표시 여부, 텍스트 변경 등
    // 예시: 성향분석 완료 여부에 따라 카드 2의 스타일 변경
    if (isMbtiChecked) {
        card2.addClass("completed"); // 'completed' 클래스 추가 (CSS에서 정의 필요)
        // txb_mbti_status.setValue("완료");
    } else {
        card2.removeClass("completed");
        // txb_mbti_status.setValue("미완료");
    }

    // 예시: 코드분석 완료 여부에 따라 카드 3의 스타일 변경
    if (isCodeChecked) {
        card3.addClass("completed");
        // txb_code_status.setValue("완료");
    } else {
        card3.removeClass("completed");
        // txb_code_status.setValue("미완료");
    }

    // 프로필 완성도 업데이트
    var completeCount = 0;
    if (isMbtiChecked) completeCount++;
    if (isCodeChecked) completeCount++;
    var totalTasks = 2; // MBTI, 코드분석
    var completionPercentage = (completeCount / totalTasks) * 100;
    txb_profile_complete.setValue(completionPercentage + "%");
    document.querySelector(".progress-fill").style.width = completionPercentage + "%";
};

