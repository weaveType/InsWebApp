            /* 포지션 카드 - 반응형 그리드 */
            .positions-container {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 20px;
                margin-top: 30px;
                max-width: 1000px;
                margin-left: auto;
                margin-right: auto;
            }

            .position-card {
                background-color: #fff;
                border-radius: 10px;
                padding: 20px;
                cursor: pointer;
                border: 1px solid #e0e0e0;
                transition: transform 0.2s ease, box-shadow 0.2s ease;
            }

            .position-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

            .position-header {
                width: 100%;
                height: 100px;
                border-radius: 5px;
                margin-bottom: 15px;
                position: relative;
            }

            .position-header-dark {
                background-color: #333;
            }

            .position-header-blue {
                background-color: #e3f2fd;
            }

            .position-status {
                position: absolute;
                top: 10px;
                right: 10px;
                font-size: 11px;
                padding: 2px 6px;
                border-radius: 3px;
                background-color: #e8f5e9;
                color: #00a832;
            }

            .position-company {
                font-size: clamp(12px, 1.8vw, 14px);
                color: #666;
                margin-bottom: 5px;
                text-align: left;
                display: block;
            }

            .position-title {
                font-size: clamp(14px, 2vw, 16px);
                font-weight: bold;
                color: #333;
                margin-bottom: 5px;
                text-align: left;
                display: block;
                line-height: 1.3;
            }

            .position-status-text {
                font-size: clamp(10px, 1.5vw, 12px);
                color: #666;
                text-align: left;
                display: block;
            }

            /* 회사 목록 - 반응형 그리드 */
            .companies-container {
                margin-top: 30px;
                display: grid;
                grid-template-columns: repeat(4, 1fr);
                gap: 20px;
                max-width: 1000px;
                margin-left: auto;
                margin-right: auto;
            }

            .company-item {
                height: 100px;
                background-color: #fff;
                border-radius: 12px;
                border: 2px solid #e8f0fe;
                display: flex;
                align-items: center;
                justify-content: center;
                text-align: center;
                transition: all 0.3s ease;
                padding: 15px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.08);
                position: relative;
                overflow: hidden;
            }

            .company-item:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0,123,255,0.15);
                border-color: #007bff;
                background-color: #f8fbff;
            }

            .company-item:active {
                transform: translateY(-1px);
            }

            .company-name {
                font-size: clamp(13px, 2vw, 15px);
                color: #333;
                padding: 0 10px;
                word-break: keep-all;
                line-height: 1.3;
                font-weight: 500;
            }

            .company-logo {
                max-width: 50px;
                max-height: 50px;
                object-fit: contain;
                border-radius: 4px;
            }


            /* 태블릿 반응형 */
            @media (max-width: 1024px) {
                .header {
                    padding: 0 20px;
                }
                
                .nav-link {
                    margin-right: 15px;
                    font-size: 13px;
                }
                
                .search-input {
                    width: 120px;
                }

                .hero-container {
                    flex-direction: column;
                    gap: 20px;
                }

                .hero-right {
                    flex: none;
                    width: 100%;
                    max-width: 400px;
                    margin: 0 auto;
                }

                .cards-container {
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                }

                .positions-container {
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                }

                .companies-container {
                    grid-template-columns: repeat(2, 1fr);
                }
            }

            /* 모바일 반응형 */
            @media (max-width: 768px) {
                .nav-menu xf:image {
                    width: 100px !important;
                    height: 28px !important;
                }
                
                .nav-link {
                    display: none;
                }
                
                .search-input {
                    width: 100px;
                    font-size: 12px;
                    height: 20px;
                }
                
                .btn-login, .btn-enterprise {
                    padding: 5px 8px;
                    font-size: 11px;
                    height: 28px;
                }

                .hero-section {
                    padding: 40px 15px;
                }

                .ad-area {
                    min-height: 280px;
                    padding: 40px 15px;
                }

                .cards-container {
                    grid-template-columns: 1fr;
                    gap: 15px;
                }

                .positions-container {
                    grid-template-columns: 1fr;
                    gap: 15px;
                }

                .companies-container {
                    grid-template-columns: 1fr;
                }

                .section {
                    padding: 40px 15px;
                }

                .section-title {
                    margin-bottom: 20px;
                }

                .section-subtitle {
                    margin-top: -10px;
                    margin-bottom: 20px;
                }
            }

            /* 프로필 영역 스타일 */
            .profile-area {
                width: 100%;
                min-height: 350px;
                background-color: #fff;
                padding: 20px;
                border-radius: 10px;
                border: 1px solid #e0e0e0;
            }

            .profile-header {
                display: flex;
                align-items: center;
                margin-bottom: 20px;
                gap: 12px;
            }

            .profile-avatar {
                flex-shrink: 0;
            }

            .profile-info {
                flex: 1;
            }

            .profile-name {
                font-size: 18px;
                font-weight: bold;
                color: #333;
                margin-bottom: 5px;
                display: block;
            }

            .profile-matching-status {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .matching-status-text {
                font-size: 14px;
                color: #666;
            }

            .profile-completion {
                margin-bottom: 20px;
            }

            .completion-text {
                font-size: 12px;
                color: #666;
                line-height: 1.4;
            }

            .matching-status-section {
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                padding: 15px;
                margin-bottom: 15px;
            }

            .matching-status-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 15px;
            }

            .profile-progress {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 8px;
            }

            .progress-label {
                font-size: 14px;
                color: #666;
            }

            .progress-percent {
                font-size: 14px;
                color: #666;
            }

            .progress-bar {
                width: 100%;
                height: 8px;
                background-color: #e0e0e0;
                border-radius: 4px;
                overflow: hidden;
                margin-bottom: 15px;
            }

            .progress-fill {
                height: 100%;
                background: linear-gradient(90deg, #00d4ff, #2ecc71);
                transition: width 0.3s ease;
            }

            .stats-section {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 15px;
                padding: 0 5px;
            }

            .stats-item {
                text-align: center;
            }

            .stats-number {
                font-size: 24px;
                font-weight: bold;
                color: #333;
                margin-bottom: 5px;
                display: block;
            }

            .stats-label {
                font-size: 12px;
                color: #666;
            }

            /* 개발자 성향 태그 스타일 */
            .dev-type-tag-container {
                display: flex;
                flex-wrap: wrap;
                gap: 5px;
                margin-top: 10px;
            }

            .dev-type-tag {
                background-color: #e0f7fa; /* Light cyan background */
                color: #00796b; /* Dark cyan text */
                padding: 5px 10px;
                border-radius: 15px;
                font-size: 12px;
                font-weight: 500;
                white-space: nowrap;
                border: 1px solid #b2ebf2;
            }

            /* 작은 모바일 */
            @media (max-width: 480px) {
                .company-row {
                    grid-template-columns: 1fr;
                }

                .ad-area {
                    min-height: 250px;
                    padding: 30px 10px;
                }

                .card {
                    padding: 20px;
                    min-height: 220px;
                }

                .position-card {
                    padding: 15px;
                }

                .profile-area {
                    padding: 15px;
                }

                .profile-header {
                    flex-direction: column;
                    text-align: center;
                    gap: 10px;
                }

                .profile-matching-status {
                    justify-content: center;
                }

                .matching-status-header {
                    flex-direction: column;
                    gap: 10px;
                    text-align: center;
                }

                .stats-section {
                    grid-template-columns: 1fr;
                    gap: 10px;
                }
            }
        ]]></style>
	</head>
	<body ev:onpageload="scwin.onpageload">
		<w2:wframe src="Header.xml" id="headerFrame" />
		<xf:group class="main-wrap">

			<!-- 메인 히어로 섹션 -->
			<xf:group class="hero-section" tagname="section">
				<xf:group class="hero-container clearfix">
					<!-- 광고 영역 -->
					<xf:group class="hero-left">
						<xf:group class="ad-area" id="ad_area" ev:onclick="scwin.ad_onclick">
							<w2:textbox class="ad-title" label="당신의 꿈의 직장을"></w2:textbox>
							<w2:textbox class="ad-title" label="찾아드립니다"></w2:textbox>
							<w2:textbox class="ad-subtitle" label="AI 기반 매칭으로 최적의 기업과 만남"></w2:textbox>
							<xf:trigger class="ad-button" type="button">
								<xf:label><![CDATA[무료로 시작하기 →]]></xf:label>
							</xf:trigger>
						</xf:group>
					</xf:group>

					<!-- 로그인 박스 -->
					<xf:group class="hero-right">
						<!-- 비로그인 상태 -->
						<xf:group class="login-area" id="grp_login_area">
							<w2:textbox class="login-title" label="로그인하고 기업 매칭에 참여해 보세요."></w2:textbox>
							<xf:trigger class="btn-main-login" id="btnMainLogin" ev:onclick="scwin.btnLogin_onclick" type="button">
								<xf:label><![CDATA[로그인]]></xf:label>
							</xf:trigger>
							<xf:group class="gift-area">
								<w2:textbox class="gift-text" label="매칭 퀘스트 완료하고"></w2:textbox>
								<w2:textbox class="gift-text-bold" label="원하는 기업에 지원하세요!"></w2:textbox>
							</xf:group>
						</xf:group>

						<!-- 로그인 상태 - 프로필 영역 -->
						<xf:group class="profile-area" id="grp_profile_area" style="display:none;">
							<!-- 사용자 정보 헤더 -->
							<xf:group class="profile-header">
								<xf:group class="profile-avatar">
									<xf:image src="/InsWebApp/images/ws5/default_user.png" style="width:60px;height:60px;border-radius:50%;"
										id="img_user_avatar"></xf:image>
								</xf:group>
								<xf:group class="profile-info">
									<w2:textbox class="profile-name" id="txb_user_name"></w2:textbox>
									<xf:group class="profile-matching-status">
										<w2:switch id="swt_matching_toggle" ev:onchange="scwin.toggleMatching" style="margin-left:10px;"></w2:switch>
									</xf:group>
								</xf:group>
							</xf:group>

							<!-- 프로필 완성도 -->
							<xf:group class="profile-completion">
								<w2:textbox class="completion-text" label="필수 조건을 입력하여 매칭 프로필 완성도를 높이세요!"></w2:textbox>
							</xf:group>

							<xf:group class="matching-status-section">
								<!-- 프로필 완성도 바 -->
								<xf:group class="profile-progress">
									<w2:textbox class="progress-label" label="매칭 프로필 완성도"></w2:textbox>
									<w2:textbox class="progress-percent" id="txb_profile_complete" label="0%"></w2:textbox>
								</xf:group>
								<xf:group class="progress-bar">
									<xf:group class="progress-fill" style="width:0%;"></xf:group>
								</xf:group>
							</xf:group>

							<!-- 통계 영역 -->
							<xf:group class="stats-section">
								<xf:group class="stats-item">
									<w2:textbox class="stats-number" id="txb_matching_count" label="0"></w2:textbox>
									<w2:textbox class="stats-label" label="매칭 제안"></w2:textbox>
								</xf:group>
								<xf:group class="stats-item">
									<w2:textbox class="stats-number" id="txb_application_count" label="0"></w2:textbox>
									<w2:textbox class="stats-label" label="지원현황"></w2:textbox>
								</xf:group>
							</xf:group>
						</xf:group>
					</xf:group>
				</xf:group>
			</xf:group>

			<!-- 점수매칭 섹션 -->
			<xf:group class="section section-white" tagname="section">
				<w2:textbox class="section-title" label="점수매칭"></w2:textbox>

				<xf:group class="cards-container">
					<!-- 카드 1: 튜토리얼 -->
					<xf:group class="card card-green" id="card1" ev:onclick="scwin.card1_onclick">
						<xf:group class="card-icon card-icon-green">
							<xf:image src="/InsWebApp/images/ws5/main/tutorial.png" style="width: 150px;height: 150px;" id=""></xf:image>
						</xf:group>
						<w2:textbox class="card-title" label="튜토리얼"></w2:textbox>
					</xf:group>
					<!-- 카드 2: 성향 검사 -->
					<xf:group class="card card-blue" id="card2" ev:onclick="scwin.card2_onclick">
						<xf:group class="card-icon card-icon-blue">
							<xf:image src="/InsWebApp/images/ws5/main/mbti_check.png" style="width: 150px;height: 150px;" id=""></xf:image>
						</xf:group>
						<w2:textbox class="card-title" label="개발자 성향분석"></w2:textbox>
					</xf:group>
                    <!-- 카드 3: 코드 분석 -->
					<xf:group class="card card-orange" id="card3" ev:onclick="scwin.card3_onclick">
						<xf:group class="card-icon card-icon-orange">
							<xf:image src="/InsWebApp/images/ws5/main/code_check.png" style="width: 150px;height: 150px;" id=""></xf:image>
						</xf:group>
						<w2:textbox class="card-title" label="코드분석" style=""></w2:textbox>
					</xf:group>
				</xf:group>
			</xf:group>

			<!-- 포지션 추천 섹션 -->
			<xf:group class="section section-gray" tagname="section">
				<w2:textbox class="section-title" label="로그인하고 내 조건에 맞는 포지션 추천받기"></w2:textbox>

				<w2:generator id="gen_position_card" class="positions-container">
						<xf:group class="position-card" style="position: relative;">
							<xf:group class="position-header position-header-dark"></xf:group>
							<w2:textbox class="position-company" id="txt_name"></w2:textbox>
							<w2:textbox class="position-title" id="txt_title"></w2:textbox>
							<xf:group id="grp_tags_container" class="dev-type-tag-container">
								<w2:textbox id="tag1" class="dev-type-tag" style="display:none;"></w2:textbox>
								<w2:textbox id="tag2" class="dev-type-tag" style="display:none;"></w2:textbox>
								<w2:textbox id="tag3" class="dev-type-tag" style="display:none;"></w2:textbox>
								<w2:textbox id="tag4" class="dev-type-tag" style="display:none;"></w2:textbox>
							</xf:group>
							<xf:trigger
								style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: transparent; border: none;"
								type="button" id="btn_card_overlay" ev:onclick="scwin.handlePositionCardClick">
								<xf:label><![CDATA[]]></xf:label>
							</xf:trigger>
						</xf:group>
					</w2:generator>
			</xf:group>

			<!-- 매칭 참여 기업 섹션 -->
			<xf:group class="section section-white" tagname="section">
				<w2:textbox class="section-title" label="매칭 참여 기업"></w2:textbox>
				<w2:textbox class="section-subtitle" id="txt_company_count" label="참여 기업: 0개"></w2:textbox>

				<w2:generator id="gen_company_card" class="companies-container">
					<xf:group class="company-item" style="cursor: pointer;">
						<xf:group style="display:flex;align-items:center;justify-content:center;height:100%;gap:10px;">
							<xf:image id="img_company_logo" style="max-width:100%;max-height:100%;width:auto;height:auto;object-fit:contain;" />
							<w2:textbox id="txt_company_name" class="company-name" style="font-weight:500;"></w2:textbox>
						</xf:group>
						<xf:trigger style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: transparent; border: none;" type="button" id="btn_company_card_overlay" ev:onclick="scwin.handleCompanyCardClick"></xf:trigger>
					</xf:group>
				</w2:generator>
			</xf:group>
		</xf:group>
	</body>
</html>