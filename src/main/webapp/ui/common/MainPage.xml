// 로그인 영역 업데이트
scwin.updateLoginArea = function () {
    var userInfoCookie = WebSquare.cookie.getCookie("userInfo");
    var userInfo = null;
    if (userInfoCookie) {
        try {
            userInfo = JSON.parse(userInfoCookie);
        } catch (e) {
            console.error("사용자 정보 파싱 오류:", e);
            userInfo = null;
        }
    }

    if (userInfo != null) {
        // 로그인 상태 - 프로필 영역 표시
        grp_login_area.hide();
        grp_profile_area.show();

        // 사용자 정보 업데이트
        txb_user_name.setValue(userInfo.name + "님");

    } else {
        // 비로그인 상태 - 로그인 영역 표시
        grp_login_area.show();
        grp_profile_area.hide();
    }
};

