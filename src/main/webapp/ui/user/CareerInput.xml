    // Îç∞Ïù¥ÌÑ∞ÎßµÏóê Îç∞Ïù¥ÌÑ∞ ÏÑ§Ï†ï (user_idÎäî Î∞±ÏóîÎìúÏóêÏÑú ÏÑ∏ÏÖòÏúºÎ°ú Ï≤òÎ¶¨)
    // Í≤ΩÎ†•ÏûêÏù∏ Í≤ΩÏö∞ Í≤ΩÎ†• Í∏∞Í∞ÑÏùÑ career ÌïÑÎìúÏóê ÏßÅÏ†ë Ï†ÄÏû•
    if (careerType === "experienced") {
        dma_career.set("career", dma_career.get("careerPeriod"));
    } else {
        dma_career.set("career", "Ïã†ÏûÖ");
    }

    console.log("Í≤ΩÎ†• Îç∞Ïù¥ÌÑ∞ Ï†ÑÏÜ°:", {
        career: dma_career.get("career"),
        careerType: dma_career.get("careerType"),
        careerPeriod: dma_career.get("careerPeriod")
    });

    // ÏÑúÎ≤ÑÏóê Îç∞Ïù¥ÌÑ∞ Ï†ÄÏû•
    $c.sbm.execute(sbm_saveCareer);
};

// Success callback for career save
