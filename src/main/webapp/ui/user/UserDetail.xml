<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:w2="http://www.inswave.com/websquare"
	xmlns:xf="http://www.w3.org/2002/xforms">

	<head meta_screenName="개인정보 수정">
		<w2:type>COMPONENT</w2:type>
		<w2:buildDate />
		<w2:MSA />
		<xf:model>
			<w2:dataCollection baseNode="map">
				<w2:dataMap baseNode="map" id="dma_userInfoVo">
					<w2:keyInfo>
						<w2:key id="accountId" name="계정 ID" dataType="number"></w2:key>
						<w2:key id="name" name="사용자명" dataType="text"></w2:key>
						<w2:key id="career" name="경력수준" dataType="text"></w2:key>
						<w2:key id="preferredLocations" name="지역" dataType="text"></w2:key>
						<w2:key id="currentPosition" name="직무분야" dataType="text"></w2:key>
						<w2:key id="yearSalary" name="희망연봉" dataType="number"></w2:key>
						<w2:key id="isMbtiChecked" name="MBTI완료여부" dataType="text"></w2:key>
						<w2:key id="isCodeChecked" name="코드분석완료여부" dataType="text"></w2:key>
					</w2:keyInfo>
				</w2:dataMap>
			</w2:dataCollection>
			<xf:submission id="sbm_userDetail" action="/InsWebApp/US0002UpdView.pwkjson" method="post" mediatype="application/json"
				ref='data:json,{"id":"dma_userInfoVo", "key":"userInfoVo"}' target='data:json,{"id":"dma_userInfoVo", "key":"elData"}' encoding="UTF-8" instance="" replace="" errorHandler=""
				customHandler="" mode="asynchronous" processMsg="유저 정보 조회중" ev:submit="" ev:submitdone="scwin.updateCardStatus" ev:submiterror="" abortTrigger="">
			</xf:submission>
		</xf:model>
		<w2:layoutInfo />
		<w2:publicInfo method="" />

		<style type="text/css"><![CDATA[
            /* 공통 레이아웃 */
            .main-wrap {
                width: 100%;
                background-color: #ffffff;
                font-family: "Malgun Gothic", "맑은 고딕", sans-serif;
            }
            
            .main-container {
                display: flex;
                min-height: calc(100vh - 70px); /* 헤더 높이를 제외한 최소 높이 */
                max-width: 1400px;
                margin: 0 auto;
                background-color: #f8f9fa;
            }

            /* 메인 콘텐츠 영역 (pageFrame이 들어갈 곳) */
            .main-content {
                flex: 1;
                padding: min(30px, 4vw);
                overflow-y: auto;
            }

            /* 사이드바 */
            .sidebar {
                width: 280px;
                background-color: #ffffff;
                border-right: 1px solid #e0e0e0;
                padding: 20px 20px 20px 5px;
                flex-shrink: 0;
            }

            .sidebar-title {
                font-size: clamp(18px, 3vw, 20px);
                font-weight: bold;
                color: #333;
                margin-bottom: 30px;
            }

            .sidebar-menu {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .menu-category {
                margin-bottom: 30px;
            }

            .menu-category-title {
                font-size: clamp(14px, 2vw, 16px);
                font-weight: 600;
                color: #666;
                margin-bottom: 15px;
                padding-bottom: 8px;
                padding-left: 5px;
                border-bottom: 1px solid #f0f0f0;
            }

            .menu-item {
                display: flex;
                align-items: center;
                padding: 12px 16px 12px 8px;
                margin-bottom: 4px;
                color: #333;
                text-decoration: none;
                border-radius: 8px;
                transition: all 0.2s ease;
                cursor: pointer;
                font-size: clamp(13px, 1.8vw, 14px);
                position: relative;
            }

            .menu-item:hover {
                background-color: #f8f9fa;
                color: #007bff;
            }

            .menu-item.active {
                background-color: #e3f2fd;
                color: #1976d2;
                font-weight: 600;
            }

            .menu-item.incomplete {
                color: #dc3545;
            }

            .menu-item.incomplete::after {
                content: "미완료";
                position: absolute;
                right: 12px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 10px;
                background-color: #dc3545;
                color: white;
                padding: 2px 6px;
                border-radius: 8px;
            }

            .new-badge {
                background-color: #ff4757;
                color: white;
                font-size: 10px;
                padding: 2px 6px;
                border-radius: 8px;
                margin-left: 8px;
            }

            /* 반응형 디자인 */
            @media (max-width: 1024px) {
                .main-container {
                    flex-direction: column;
                }

                .sidebar {
                    width: 100%;
                    border-right: none;
                    border-bottom: 1px solid #e0e0e0;
                    padding: 15px 15px 15px 10px;
                }

                .sidebar-menu {
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                    gap: 20px;
                }

            }

            @media (max-width: 768px) {
                .sidebar {
                    padding: 15px;
                }
            }

            @media (max-width: 480px) {
                .sidebar, .main-content {
                    padding: 10px;
                }
            }
        ]]></style>

		<script lazy="false" type="text/javascript"><![CDATA[
scwin.onpageload = function () {
    try {
        var userInfoStr = WebSquare.cookie.getCookie("userInfo");
        if (userInfoStr) {
            var userInfo = JSON.parse(userInfoStr);
            if (userInfo && userInfo.accountId) {
                dma_userInfoVo.set("accountId", userInfo.accountId);
                // 서버 통신
                $c.sbm.execute($p, sbm_userDetail);
            } else {
                console.error("유효하지 않은 사용자 정보 쿠키입니다.");
            }
        } else {
            console.log("로그인 상태가 아닙니다.");
            // 필요 시 로그인 페이지로 리디렉션 또는 다른 처리
        }
    } catch (e) {
        console.error("페이지 로드 중 오류 발생:", e);
    }
};

// 프로필 메뉴 클릭 이벤트
scwin.menu_profile_onclick = function() {
    contentFrame.setSrc('UserDetailMain.xml');
};

// 지원현황 메뉴 클릭 이벤트
scwin.menu_history_onclick = function() {
    contentFrame.setSrc('ApplicationHistory.xml');
};

// 매칭제안 메뉴 클릭 이벤트
scwin.menu_interest_onclick = function() {
    contentFrame.setSrc();
};

// MBTI 검사 시작
scwin.startMbti_onclick = function () {
    alert("MBTI 성격 검사를 시작합니다.");
};

// 코드분석 시작
scwin.startCodeAnalysis_onclick = function () {
    alert("코드분석을 시작합니다.");
};

scwin.btn_userUpdate_onclick = function (e) {
    $p.url("updateUser.xml");
};
]]></script>
	</head>

	<body ev:onpageload="scwin.onpageload">
		<w2:wframe src="../common/Header.xml" id="headerFrame" />
		<xf:group class="main-wrap">
			<!-- 메인 컨테이너 -->
			<xf:group class="main-container">
				<!-- 사이드바 -->
				<aside class="sidebar">
					<w2:textbox label="내 정보" class="menu-category-title"></w2:textbox>
					<xf:group id="menu_profile" class="menu-item active incomplete" ev:onclick="scwin.menu_profile_onclick">
						<w2:textbox label="프로필" style="background:transparent; border:none; pointer-events: none;"></w2:textbox>
					</xf:group>
					<xf:group id="menu_history" class="menu-item" ev:onclick="scwin.menu_history_onclick">
						<w2:textbox label="지원현황" style="background:transparent; border:none; pointer-events: none;"></w2:textbox>
					</xf:group>
					<xf:group id="menu_interest" class="menu-item" ev:onclick="scwin.menu_interest_onclick">
						<w2:textbox label="매칭제안" style="background:transparent; border:none; pointer-events: none;"></w2:textbox>
					</xf:group>
				</aside>

				<!-- 메인 콘텐츠 -->
				<xf:group class="main-content">
					<w2:pageFrame id="contentFrame" src="/InsWebApp/ui/user/UserDetailMain.xml" style="width: 100%; height: 100%;"></w2:pageFrame>
				</xf:group>
			</xf:group>
		</xf:group>
	</body>
</html>