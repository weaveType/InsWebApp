// 카드 상태 업데이트 함수
scwin.updateCardStatus = function () {
   var mbtiCompleted = dma_userInfo.get("mbtiCompleted") === "true";
   var codeCompleted = dma_userInfo.get("codeAnalysisCompleted") === "true";

   // MBTI 카드 상태 업데이트
   scwin.updateSingleCard("mbti-card", mbtiCompleted);

   // 코드분석 카드 상태 업데이트
   scwin.updateSingleCard("code-card", codeCompleted);
};

// 개별 카드 상태 업데이트
scwin.updateSingleCard = function (cardId, isCompleted) {
   try {
       // 클래스로 카드 찾기 (ID가 안되니까)
       var cards = document.querySelectorAll('.action-card');
       var cardElement = null;
       
       if (cardId === 'mbti-card' && cards.length > 0) {
           cardElement = cards[0]; // 첫 번째 카드가 MBTI
       } else if (cardId === 'code-card' && cards.length > 1) {
           cardElement = cards[1]; // 두 번째 카드가 코드분석
       }
       
       if (!cardElement) return;
       
       var badgeElement = cardElement.querySelector('.incomplete-badge, .completed-badge');
       var buttonElement = cardElement.querySelector('.action-card-button');

       if (isCompleted) {
           // 완료 상태로 변경
           cardElement.classList.remove('incomplete');
           cardElement.classList.add('completed');
           
           // 직접 스타일 변경
           cardElement.style.border = '2px solid #28a745';
           cardElement.style.background = 'linear-gradient(135deg, #f8fff8, #e8f5e8)';

           // 배지 업데이트
           if (badgeElement) {
               badgeElement.textContent = '완료';
               badgeElement.className = 'completed-badge';
               badgeElement.style.backgroundColor = '#28a745';
           }

           // 버튼 숨김 처리
           if (buttonElement) {
               buttonElement.style.display = 'none';
           }
           
       } else {
           // 미완료 상태로 변경
           cardElement.classList.remove('completed');
           cardElement.classList.add('incomplete');
           
           // 원래 스타일로 복원
           cardElement.style.border = '2px solid #fc8181';
           cardElement.style.background = 'linear-gradient(135deg, #fff5f5, #fed7d7)';

           // 배지 업데이트
           if (badgeElement) {
               badgeElement.textContent = '미완료';
               badgeElement.className = 'incomplete-badge';
               badgeElement.style.backgroundColor = '#dc3545';
           }

           // 버튼 텍스트 업데이트 및 표시
           if (buttonElement) {
               buttonElement.style.display = 'block'; // 버튼 다시 표시
               buttonElement.style.backgroundColor = '#dc3545';
               if (cardId === 'mbti-card') {
                   buttonElement.textContent = '시작하기';
               } else if (cardId === 'code-card') {
                   buttonElement.textContent = '분석하기';
               }
           }
       }
   } catch(e) {
       console.log('updateSingleCard 에러:', e);
   }
};
scwin.btn_userUpdate_onclick = function (e) {
    $p.url("updateUser.xml");
};
]]></script>
