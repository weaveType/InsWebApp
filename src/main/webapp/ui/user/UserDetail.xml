    $c.sbm.execute($p, sbm_userDetail);
};

// 사용자 정보 조회 완료 처리
scwin.updateCardStatus = function(e) {
    try {
        console.log("updateCardStatus 호출됨", e);
        var res = e && e.responseJSON ? e.responseJSON : null;
        if (!res) {
            console.warn("응답 JSON이 없습니다.");
            return;
        }
        
        // 서버 응답이 elData 키를 포함할 수도 있고 아닐 수도 있음
        var data = res.elData || res;

        
        // dataMap에 값 매핑
        if (data) {
            dma_userInfoVo.setJSON(data);

            // UserDetailMain.xml 로드 및 데이터 전달 (pageFrame의 src를 설정하여 로드)
            contentFrame.setSrc('UserDetailMain.xml', { dataObject: dma_userInfoVo.getJSON() });
        }

        // MBTI/코드분석 카드 상태 업데이트
        var mbtiCard = document.getElementById("mbti_card");
        if (mbtiCard) {
            if (data.testChecked === true || data.testChecked === 'true' || data.testChecked === 1) {
                mbtiCard.classList.remove("incomplete");
                mbtiCard.classList.add("completed");
                var badge = mbtiCard.querySelector('.incomplete-badge');
                if (badge) badge.remove();
            }
        }
        
        var codeCard = document.getElementById("code_card");
        if (codeCard) {
            // 코드분석은 별도 필드가 없으므로 일단 MBTI와 동일하게 처리
            if (data.testChecked === true || data.testChecked === 'true' || data.testChecked === 1) {
                codeCard.classList.remove("incomplete");
                codeCard.classList.add("completed");
                var badge2 = codeCard.querySelector('.incomplete-badge');
                if (badge2) badge2.remove();
            }
        }
    } catch(err) {
        console.error("updateCardStatus 오류:", err);
    }
};

