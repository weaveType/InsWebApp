        <script type="text/javascript"><![CDATA[
            scwin.onpageload = function() {
                console.log("ÌîÑÎ°úÌïÑ Ï∂îÍ∞ÄÏ†ïÎ≥¥ ÌéòÏù¥ÏßÄ Î°úÎìúÎê®");
                
                // ÌéòÏù¥ÏßÄ Î°úÎìú ÌõÑ Ï¥àÍ∏∞Ìôî
                setTimeout(function() {
                    scwin.initializeTextarea();
                }, 200);
            };
            
            scwin.initializeTextarea = function() {
                // ÌÖçÏä§Ìä∏ ÏòÅÏó≠ Ïù¥Î≤§Ìä∏ Î¶¨Ïä§ÎÑà ÏÑ§Ï†ï
                var textarea = document.querySelector('.additional-intro-textarea');
                if (textarea) {
                    // Îã§ÏñëÌïú Ïù¥Î≤§Ìä∏Ïóê Í∏ÄÏûê Ïàò ÏóÖÎç∞Ïù¥Ìä∏ Ìï®Ïàò Î∞îÏù∏Îî©
                    textarea.addEventListener('input', scwin.updateCharCount);
                    textarea.addEventListener('keyup', scwin.updateCharCount);
                    textarea.addEventListener('change', scwin.updateCharCount);
                    textarea.addEventListener('paste', function() {
                        setTimeout(scwin.updateCharCount, 10);
                    });
                    
                    console.log("Ï∂îÍ∞Ä ÏÜåÍ∞ú ÌÖçÏä§Ìä∏ ÏòÅÏó≠ Ïù¥Î≤§Ìä∏ Î¶¨Ïä§ÎÑà ÏÑ§Ï†ï ÏôÑÎ£å");
                }
                
                // Ï¥àÍ∏∞ Í∏ÄÏûê Ïàò ÌëúÏãú
                scwin.updateCharCount();
            };
            
            // ÌîÑÎ°úÌïÑ Ïù¥ÎØ∏ÏßÄ ÏóÖÎ°úÎìú ÏãúÎÆ¨Î†àÏù¥ÏÖò
            scwin.uploadProfileImage = function() {
                // Ïã§Ï†ú Íµ¨ÌòÑÏãúÏóêÎäî ÌååÏùº ÏóÖÎ°úÎìú Î°úÏßÅ Íµ¨ÌòÑ
                var input = document.createElement('input');
                input.type = 'file';
                input.accept = 'image/*';
                input.onchange = function(e) {
                    var file = e.target.files[0];
                    if (file) {
                        // ÌååÏùº ÎØ∏Î¶¨Î≥¥Í∏∞
                        var reader = new FileReader();
                        reader.onload = function(event) {
                            var imageContainer = document.getElementById('profileImageContainer');
                            var uploadArea = document.getElementById('uploadArea');
                            var previewArea = document.getElementById('previewArea');
                            var previewImage = document.getElementById('previewImage');
                            
                            if (previewImage) {
                                previewImage.src = event.target.result;
                            }
                            if (uploadArea) {
                                uploadArea.style.display = 'none';
                            }
                            if (previewArea) {
                                previewArea.style.display = 'block';
                            }
                            
                            dma_profile.set("profileImage", file.name);
                        };
                        reader.readAsDataURL(file);
                    }
                };
                input.click();
            };
            
            // Ïù¥ÎØ∏ÏßÄ Ï†úÍ±∞
            scwin.removeProfileImage = function() {
                var uploadArea = document.getElementById('uploadArea');
                var previewArea = document.getElementById('previewArea');
                
                if (uploadArea) {
                    uploadArea.style.display = 'flex';
                }
                if (previewArea) {
                    previewArea.style.display = 'none';
                }
                
                dma_profile.set("profileImage", "");
            };
            
            // Ï∂îÍ∞Ä ÏÜåÍ∞úÍ∏Ä ÏûÖÎ†• Î≥ÄÍ≤Ω (ÏõπÏä§ÌÄòÏñ¥ Îç∞Ïù¥ÌÑ∞ Î∞îÏù∏Îî© Ïù¥Î≤§Ìä∏)
            scwin.additionalIntro_onchange = function() {
