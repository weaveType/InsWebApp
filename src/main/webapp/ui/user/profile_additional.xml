<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:w2="http://www.inswave.com/websquare" 
    xmlns:xf="http://www.w3.org/2002/xforms">
    
    <head meta_screenName="프로필을 완성해보세요">
        <w2:type>COMPONENT</w2:type>
        <w2:buildDate/>
        <w2:MSA/>
        <xf:model>
            <w2:dataCollection baseNode="map">
                <w2:dataMap baseNode="map" id="dma_profile">
                    <w2:keyInfo>
                        <w2:key id="profileImage" name="프로필이미지" dataType="text"></w2:key>
                        <w2:key id="additionalIntro" name="추가소개" dataType="text"></w2:key>
                    </w2:keyInfo>
                </w2:dataMap>
            </w2:dataCollection>
        </xf:model>
        <w2:layoutInfo/>
        <w2:publicInfo method=""/>
        
        <script type="text/javascript"><![CDATA[
            scwin.onpageload = function() {
                console.log("프로필 추가정보 페이지 로드됨");
                
                // 페이지 로드 후 초기화
                setTimeout(function() {
                    scwin.initializeTextarea();
                }, 200);
            };
            
            scwin.initializeTextarea = function() {
                // 텍스트 영역 이벤트 리스너 설정
                var textarea = document.querySelector('.additional-intro-textarea');
                if (textarea) {
                    // 다양한 이벤트에 글자 수 업데이트 함수 바인딩
                    textarea.addEventListener('input', scwin.updateCharCount);
                    textarea.addEventListener('keyup', scwin.updateCharCount);
                    textarea.addEventListener('change', scwin.updateCharCount);
                    textarea.addEventListener('paste', function() {
                        setTimeout(scwin.updateCharCount, 10);
                    });
                    
                    console.log("추가 소개 텍스트 영역 이벤트 리스너 설정 완료");
                }
                
                // 초기 글자 수 표시
                scwin.updateCharCount();
            };
            
            // 프로필 이미지 업로드 시뮬레이션
            scwin.uploadProfileImage = function() {
                // 실제 구현시에는 파일 업로드 로직 구현
                var input = document.createElement('input');
                input.type = 'file';
                input.accept = 'image/*';
                input.onchange = function(e) {
                    var file = e.target.files[0];
                    if (file) {
                        // 파일 미리보기
                        var reader = new FileReader();
                        reader.onload = function(event) {
                            var imageContainer = document.getElementById('profileImageContainer');
                            var uploadArea = document.getElementById('uploadArea');
                            var previewArea = document.getElementById('previewArea');
                            var previewImage = document.getElementById('previewImage');
                            
                            if (previewImage) {
                                previewImage.src = event.target.result;
                            }
                            if (uploadArea) {
                                uploadArea.style.display = 'none';
                            }
                            if (previewArea) {
                                previewArea.style.display = 'block';
                            }
                            
                            dma_profile.set("profileImage", file.name);
                        };
                        reader.readAsDataURL(file);
                    }
                };
                input.click();
            };
            
            // 이미지 제거
            scwin.removeProfileImage = function() {
                var uploadArea = document.getElementById('uploadArea');
                var previewArea = document.getElementById('previewArea');
                
                if (uploadArea) {
                    uploadArea.style.display = 'flex';
                }
                if (previewArea) {
                    previewArea.style.display = 'none';
                }
                
                dma_profile.set("profileImage", "");
            };
            
            // 추가 소개글 입력 변경 (웹스퀘어 데이터 바인딩 이벤트)
            scwin.additionalIntro_onchange = function() {
                setTimeout(function() {
                    scwin.updateCharCount();
                }, 10);
            };
            
            // 문자수 카운트 업데이트
            scwin.updateCharCount = function() {
                // 텍스트 영역에서 직접 값 가져오기
                var textarea = document.querySelector('.additional-intro-textarea');
                var intro = textarea ? textarea.value : "";
                var charCount = intro.length;
                
                // 데이터 모델에도 업데이트
                if (textarea && textarea.value) {
                    dma_profile.set("additionalIntro", textarea.value);
                }
                
                // 글자 수 표시 업데이트 (여러 방법 시도)
                var charCountElement = document.querySelector('.char-count');
                if (charCountElement) {
                    charCountElement.textContent = charCount + '/300';
                }
                
                // ID로도 시도
                var charCountById = document.getElementById('charCount');
                if (charCountById) {
                    charCountById.textContent = charCount + '/300';
                }
                
                console.log("추가 소개 글자 수 업데이트:", charCount + "/300");
                
                // 글자 수 제한 처리
                if (charCount > 300) {
                    var limitedText = intro.substring(0, 300);
                    if (textarea) {
                        textarea.value = limitedText;
                    }
                    dma_profile.set("additionalIntro", limitedText);
                    
                    if (charCountElement) {
                        charCountElement.textContent = '300/300';
                    }
                    if (charCountById) {
                        charCountById.textContent = '300/300';
                    }
                }
            };
            
            // 이전 버튼
            scwin.btn_back_onclick = function() {
                location.href = '/websquare/websquare.html?w2xPath=/ui/user/career_input.xml';
            };
            
            // 다음 버튼 (완료)
            scwin.btn_next_onclick = function() {
                // 최신 값으로 데이터 모델 업데이트
                var textarea = document.querySelector('.additional-intro-textarea');
                var additionalIntro = textarea ? textarea.value : "";
                dma_profile.set("additionalIntro", additionalIntro);
                
                var profileImage = dma_profile.get("profileImage");
                
                console.log("입력된 프로필 추가 정보:", {
                    profileImage: profileImage,
                    additionalIntro: additionalIntro
                });
                
                // 프로필 작성 완료 페이지로 이동
                location.href = '/websquare/websquare.html?w2xPath=/ui/user/profile_complete.xml';
            };
        ]]></script>
        
        <style type="text/css"><![CDATA[
            .main-container {
                background-color: #ffffff;
                min-height: 100vh;
                font-family: "Malgun Gothic", "맑은 고딕", sans-serif;
                display: flex;
                flex-direction: column;
            }
            
            .header {
                width: 100%;
                height: 70px;
                background-color: #ffffff;
                border-bottom: 1px solid #e0e0e0;
                display: flex;
                align-items: center;
                justify-content: center;
                position: relative;
            }
            
            .header-logo {
                font-size: 24px;
                font-weight: bold;
                color: #333;
                letter-spacing: 2px;
            }
            
            .header-progress {
                position: absolute;
                bottom: 0;
                left: 0;
                height: 4px;
                background: linear-gradient(90deg, #2196F3 0%, #2196F3 100%);
                width: 100%;
            }
            
            .content-area {
                flex: 1;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: flex-start;
                padding: 40px 20px;
                text-align: center;
                max-width: 700px;
                margin: 0 auto;
            }
            
            .icon-container {
                width: 80px;
                height: 80px;
                background: linear-gradient(135deg, #FF9800, #F57C00);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-bottom: 30px;
                box-shadow: 0 4px 20px rgba(255, 152, 0, 0.3);
            }
            
            .icon {
                font-size: 40px;
                color: white;
            }
            
            .main-title {
                font-size: 28px;
                font-weight: bold;
                color: #333;
                margin-bottom: 15px;
                line-height: 1.4;
            }
            
            .sub-title {
                font-size: 16px;
                color: #666;
                margin-bottom: 40px;
                line-height: 1.5;
            }
            
            .form-section {
                width: 100%;
                max-width: 600px;
                margin-bottom: 40px;
            }
            
            .section-title {
                font-size: 18px;
                font-weight: 600;
                color: #333;
                margin-bottom: 20px;
                text-align: left;
            }
            
            .profile-image-section {
                margin-bottom: 40px;
            }
            
            .image-upload-container {
                width: 150px;
                height: 150px;
                margin: 0 auto 20px;
                position: relative;
            }
            
            .upload-area {
                width: 100%;
                height: 100%;
                border: 3px dashed #e0e0e0;
                border-radius: 50%;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                transition: all 0.3s ease;
                background-color: #fafafa;
            }
            
            .upload-area:hover {
                border-color: #2196F3;
                background-color: #f3f9ff;
            }
            
            .upload-icon {
                font-size: 36px;
                color: #ccc;
                margin-bottom: 8px;
            }
            
            .upload-text {
                font-size: 14px;
                color: #999;
            }
            
            .preview-area {
                width: 100%;
                height: 100%;
                border-radius: 50%;
                overflow: hidden;
                position: relative;
                display: none;
            }
            
            .preview-image {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
            
            .image-remove-btn {
                position: absolute;
                top: -5px;
                right: -5px;
                width: 30px;
                height: 30px;
                background-color: #ff4444;
                color: white;
                border: none;
                border-radius: 50%;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 16px;
                transition: all 0.3s ease;
            }
            
            .image-remove-btn:hover {
                background-color: #cc0000;
                transform: scale(1.1);
            }
            
            .image-note {
                font-size: 13px;
                color: #666;
                margin-top: 10px;
            }
            
            .intro-section {
                text-align: left;
            }
            
            .intro-textarea {
                width: 100%;
                min-height: 120px;
                padding: 16px;
                border: 2px solid #e0e0e0;
                border-radius: 12px;
                font-size: 16px;
                font-family: "Malgun Gothic", "맑은 고딕", sans-serif;
                resize: vertical;
                transition: border-color 0.3s ease;
                box-sizing: border-box;
            }
            
            .intro-textarea:focus {
                outline: none;
                border-color: #2196F3;
                background-color: #f3f9ff;
            }
            
            .intro-info {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-top: 12px;
                font-size: 14px;
            }
            
            .intro-guide {
                color: #666;
            }
            
            .char-count {
                color: #999;
            }
            
            .info-message {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 8px;
                font-size: 14px;
                color: #2196F3;
                margin-bottom: 40px;
                padding: 12px 20px;
                background-color: #e3f2fd;
                border-radius: 8px;
                max-width: 600px;
            }
            
            .info-icon {
                font-size: 16px;
            }
            
            .button-area {
                display: flex;
                gap: 16px;
                width: 100%;
                max-width: 600px;
            }
            
            .btn-back {
                flex: 1;
                background-color: #ffffff;
                color: #666;
                border: 2px solid #e0e0e0;
                padding: 16px 32px;
                border-radius: 12px;
                font-size: 16px;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.3s ease;
            }
            
            .btn-back:hover {
                border-color: #bbb;
                background-color: #f5f5f5;
            }
            
            .btn-next {
                flex: 2;
                background-color: #2196F3;
                color: white;
                border: none;
                padding: 16px 32px;
                border-radius: 12px;
                font-size: 16px;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.3s ease;
            }
            
            .btn-next:hover {
                background-color: #1976D2;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
            }
        ]]></style>
    </head>
    
    <body ev:onpageload="scwin.onpageload">
        <xf:group class="main-container">
            <xf:group class="header">
                <xf:image src="/InsWebApp/images/ws5/weaveTypeLogo.png" style="width: 120px; height: 32px; object-fit: contain;" id="weaveTypeLogo" class="header-logo"></xf:image>
                <xf:group class="header-progress"></xf:group>
            </xf:group>
            
            <xf:group class="content-area">
                <xf:group class="icon-container">
                    <w2:textbox class="icon" label="👤" tagname="div"></w2:textbox>
                </xf:group>
                
                <w2:textbox class="main-title" label="프로필을 완성해보세요!" tagname="h1"></w2:textbox>
                <w2:textbox class="sub-title" label="프로필 사진과 추가 소개로 나만의 개성을 보여주세요." tagname="p"></w2:textbox>
                
                <xf:group class="form-section">
                    <xf:group class="profile-image-section">
                        <w2:textbox class="section-title" label="프로필 사진 (선택사항)" tagname="h3"></w2:textbox>
                        
                        <xf:group class="image-upload-container" id="profileImageContainer">
                            <xf:group class="upload-area" id="uploadArea" ev:onclick="scwin.uploadProfileImage">
                                <w2:textbox class="upload-icon" label="📷" tagname="div"></w2:textbox>
                                <w2:textbox class="upload-text" label="사진 업로드" tagname="div"></w2:textbox>
                            </xf:group>
                            
                            <xf:group class="preview-area" id="previewArea">
                                <w2:image class="preview-image" id="previewImage" src=""></w2:image>
                                <xf:trigger class="image-remove-btn" ev:onclick="scwin.removeProfileImage">
                                    <xf:label>×</xf:label>
                                </xf:trigger>
                            </xf:group>
                        </xf:group>
                        
                        <w2:textbox class="image-note" label="JPG, PNG 파일을 업로드할 수 있어요 (최대 5MB)" tagname="div"></w2:textbox>
                    </xf:group>
                    
                    <xf:group class="intro-section">
                        <w2:textbox class="section-title" label="추가 소개 (선택사항)" tagname="h3"></w2:textbox>
                        
                        <w2:textarea class="intro-textarea" id="additionalIntro" 
                                    ev:onchange="scwin.additionalIntro_onchange"
                                    placeholder="본인만의 개성이나 특별한 경험, 관심사 등을 자유롭게 작성해보세요.&#10;&#10;예시:&#10;- 새로운 기술을 배우는 것을 좋아합니다&#10;- 팀워크를 중시하며 소통을 잘합니다&#10;- 오픈소스 프로젝트에 기여한 경험이 있습니다"></w2:textarea>
                        
                        <xf:group class="intro-info">
                            <w2:textbox class="intro-guide" label="나만의 개성을 어필해보세요!" tagname="span"></w2:textbox>
                            <w2:textbox class="char-count" id="charCount" label="0/300" tagname="span"></w2:textbox>
                        </xf:group>
                    </xf:group>
                </xf:group>
                
                <xf:group class="info-message">
                    <w2:textbox class="info-icon" label="✨" tagname="span"></w2:textbox>
                    <w2:textbox label="프로필이 완성되면 더 많은 기업의 관심을 받을 수 있어요!" tagname="span"></w2:textbox>
                </xf:group>
                
                <xf:group class="button-area">
                    <xf:trigger class="btn-back" ev:onclick="scwin.btn_back_onclick">
                        <xf:label>이전</xf:label>
                    </xf:trigger>
                    
                    <xf:trigger class="btn-next" ev:onclick="scwin.btn_next_onclick">
                        <xf:label>완성하기</xf:label>
                    </xf:trigger>
                </xf:group>
            </xf:group>
        </xf:group>
    </body>
</html>