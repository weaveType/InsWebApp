<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:w2="http://www.inswave.com/websquare" 
    xmlns:xf="http://www.w3.org/2002/xforms">
    
    <head meta_screenName="프로필을 완성해주세요">
        <w2:type>COMPONENT</w2:type>
        <w2:buildDate/>
        <w2:MSA/>
        <xf:model>
            <w2:dataCollection baseNode="map">
                <w2:dataMap baseNode="map" id="dma_profile">
                    <w2:keyInfo>
                        <w2:key id="profileImage" name="프로필이미지" dataType="text"></w2:key>
                        <w2:key id="additionalIntro" name="추가자기소개" dataType="text"></w2:key>
                    </w2:keyInfo>
                </w2:dataMap>
            </w2:dataCollection>
        </xf:model>
        <w2:layoutInfo/>
        <w2:publicInfo method=""/>
        
        <script type="text/javascript"><![CDATA[
            scwin.onpageload = function() {
                console.log("프로필 추가 정보 페이지 로드됨");
                
                // 텍스트 영역 이벤트 바인딩
                setTimeout(function() {
                    var textarea = document.querySelector('.additional-intro-textarea');
                    if (textarea) {
                        textarea.addEventListener('input', scwin.updateCharCount);
                        textarea.addEventListener('keyup', scwin.updateCharCount);
                    }
                }, 100);
            };
            
            scwin.handleFileUpload = function(event) {
                var file = event.target.files[0];
                if (!file) return;
                
                // 파일 유형 검사
                if (!file.type.startsWith('image/')) {
                    alert('이미지 파일만 업로드 가능합니다.');
                    return;
                }
                
                // 파일 크기 검사 (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('파일 크기는 5MB 이하여야 합니다.');
                    return;
                }
                
                var reader = new FileReader();
                reader.onload = function(e) {
                    // 프리뷰 이미지 표시
                    var uploadArea = document.querySelector('.upload-area');
                    var previewArea = document.querySelector('.preview-area');
                    var previewImage = document.querySelector('.preview-image');
                    
                    if (uploadArea && previewArea && previewImage) {
                        uploadArea.style.display = 'none';
                        previewArea.style.display = 'block';
                        previewImage.src = e.target.result;
                        
                        // 데이터 모델에 저장
                        dma_profile.set("profileImage", e.target.result);
                        console.log("프로필 이미지 업로드 완료");
                    }
                };
                reader.readAsDataURL(file);
            };
            
            scwin.removeImage = function() {
                var uploadArea = document.querySelector('.upload-area');
                var previewArea = document.querySelector('.preview-area');
                var fileInput = document.getElementById('profileImageInput');
                
                if (uploadArea && previewArea && fileInput) {
                    uploadArea.style.display = 'flex';
                    previewArea.style.display = 'none';
                    fileInput.value = '';
                    
                    // 데이터 모델에서 제거
                    dma_profile.set("profileImage", "");
                    console.log("프로필 이미지 제거됨");
                }
            };
            
            scwin.updateCharCount = function(event) {
                var textarea = event ? event.target : document.querySelector('.additional-intro-textarea');
                var currentLength = textarea ? textarea.value.length : 0;
                var maxLength = 300;
                
                // 글자 수 표시 업데이트
                var charCountElement = document.querySelector('.char-count');
                var charCountById = document.getElementById('additionalIntroCharCount');
                
                if (charCountElement) {
                    charCountElement.textContent = currentLength + '/' + maxLength;
                }
                if (charCountById) {
                    charCountById.textContent = currentLength + '/' + maxLength;
                }
                
                // 최대 길이 제한
                if (currentLength > maxLength) {
                    var limitedText = textarea.value.substring(0, maxLength);
                    if (textarea) {
                        textarea.value = limitedText;
                    }
                    dma_profile.set("additionalIntro", limitedText);
                    
                    if (charCountElement) {
                        charCountElement.textContent = '300/300';
                    }
                    if (charCountById) {
                        charCountById.textContent = '300/300';
                    }
                }
            };
            
            // 이전 버튼 - $p.url 방식
            scwin.btn_back_onclick = function() {
                console.log("경력 입력 페이지로 이동");
                $p.url("CareerInput.xml");
            };
            
            // 다음 버튼 (완료) - $p.url 방식
            scwin.btn_next_onclick = function() {
                // 최신 값으로 데이터 모델 업데이트
                var textarea = document.querySelector('.additional-intro-textarea');
                var additionalIntro = textarea ? textarea.value : "";
                dma_profile.set("additionalIntro", additionalIntro);
                
                var profileImage = dma_profile.get("profileImage");
                
                console.log("입력된 프로필 추가 정보:", {
                    profileImage: profileImage,
                    additionalIntro: additionalIntro
                });
                
                // 프로필 작성 완료 페이지로 이동
                $p.url("ProfileComplete.xml");
            };
        ]]></script>
        
        <style type="text/css"><![CDATA[
            .main-container {
                background-color: #ffffff;
                min-height: 100vh;
                font-family: "Malgun Gothic", "맑은 고딕", sans-serif;
                display: flex;
                flex-direction: column;
            }
            
            .header {
                width: 100%;
                height: 70px;
                background-color: #ffffff;
                border-bottom: 1px solid #e0e0e0;
                display: flex;
                align-items: center;
                justify-content: center;
                position: relative;
            }
            
            .header-logo {
                font-size: 24px;
                font-weight: bold;
                color: #333;
                letter-spacing: 2px;
            }
            
            .header-progress {
                position: absolute;
                bottom: 0;
                left: 0;
                height: 4px;
                background: linear-gradient(90deg, #007bff 0%, #007bff 100%);
                width: 100%;
            }
            
            .content-area {
                flex: 1;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: flex-start;
                padding: 40px 20px;
                text-align: center;
                max-width: 700px;
                margin: 0 auto;
            }
            
            .icon-container {
                width: 80px;
                height: 80px;
                background: linear-gradient(135deg, #FF9800, #F57C00);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-bottom: 30px;
                box-shadow: 0 4px 20px rgba(255, 152, 0, 0.3);
            }
            
            .icon {
                font-size: 40px;
                color: white;
            }
            
            .main-title {
                font-size: 28px;
                font-weight: bold;
                color: #333;
                margin-bottom: 15px;
                line-height: 1.4;
            }
            
            .sub-title {
                font-size: 16px;
                color: #666;
                margin-bottom: 40px;
                line-height: 1.5;
            }
            
            .form-section {
                width: 100%;
                max-width: 600px;
                margin-bottom: 40px;
            }
            
            .section-title {
                font-size: 18px;
                font-weight: 600;
                color: #333;
                margin-bottom: 20px;
                text-align: left;
            }
            
            .profile-image-section {
                margin-bottom: 40px;
            }
            
            .image-upload-container {
                width: 150px;
                height: 150px;
                margin: 0 auto 20px;
                position: relative;
            }
            
            .upload-area {
                width: 100%;
                height: 100%;
                border: 3px dashed #e0e0e0;
                border-radius: 50%;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                transition: all 0.3s ease;
                background-color: #fafafa;
            }
            
            .upload-area:hover {
                border-color: #007bff;
                background-color: #f0f8ff;
            }
            
            .upload-icon {
                font-size: 36px;
                color: #ccc;
                margin-bottom: 8px;
            }
            
            .upload-text {
                font-size: 14px;
                color: #999;
            }
            
            .preview-area {
                width: 100%;
                height: 100%;
                border-radius: 50%;
                overflow: hidden;
                position: relative;
                display: none;
            }
            
            .preview-image {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
            
            .image-remove-btn {
                position: absolute;
                top: -5px;
                right: -5px;
                width: 30px;
                height: 30px;
                background-color: #ff4444;
                color: white;
                border: none;
                border-radius: 50%;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 16px;
                font-weight: bold;
                transition: background-color 0.3s ease;
            }
            
            .image-remove-btn:hover {
                background-color: #cc0000;
            }
            
            .hidden-file-input {
                display: none;
            }
            
            .additional-intro-section {
                margin-bottom: 40px;
            }
            
            .textarea-container {
                position: relative;
                margin-top: 16px;
            }
            
            .additional-intro-textarea {
                width: 100%;
                min-height: 120px;
                padding: 20px;
                border: 2px solid #e0e0e0;
                border-radius: 12px;
                font-size: 16px;
                font-family: "Malgun Gothic", "맑은 고딕", sans-serif;
                line-height: 1.6;
                resize: vertical;
                transition: border-color 0.3s ease;
                box-sizing: border-box;
            }
            
            .additional-intro-textarea:focus {
                outline: none;
                border-color: #007bff;
            }
            
            .additional-intro-textarea::placeholder {
                color: #999;
                line-height: 1.6;
            }
            
            .char-count {
                position: absolute;
                bottom: 12px;
                right: 16px;
                font-size: 12px;
                color: #999;
                background-color: rgba(255, 255, 255, 0.9);
                padding: 4px 8px;
                border-radius: 4px;
            }
            
            .buttons-section {
                display: flex;
                gap: 16px;
                width: 100%;
                max-width: 600px;
                margin-top: 20px;
            }
            
            .btn-back {
                flex: 1;
                background-color: #ffffff;
                color: #666;
                border: 2px solid #e0e0e0;
                padding: 16px 32px;
                border-radius: 12px;
                font-size: 16px;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.3s ease;
            }
            
            .btn-back:hover {
                border-color: #bbb;
                background-color: #f5f5f5;
            }
            
            .btn-next {
                flex: 2;
                background-color: #007bff;
                color: white;
                border: none;
                padding: 16px 32px;
                border-radius: 12px;
                font-size: 16px;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.3s ease;
            }
            
            .btn-next:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0, 123, 255, 0.25);
            }
        ]]></style>
    </head>
    
    <body ev:onpageload="scwin.onpageload">
        <xf:group class="main-container">
            <xf:group class="header">
                <xf:image src="/InsWebApp/images/ws5/weaveTypeLogo.png" class="header-logo" style="height: 40px; width: auto;"></xf:image>
                <xf:group class="header-progress"></xf:group>
            </xf:group>
            
            <xf:group class="content-area">
                <xf:group class="icon-container">
                    <w2:textbox class="icon" label="👤" tagname="div"></w2:textbox>
                </xf:group>
                
                <w2:textbox class="main-title" label="프로필을 완성해주세요" tagname="h1"></w2:textbox>
                <w2:textbox class="sub-title" label="개성 있는 프로필로 기업의 관심을 끌어보세요" tagname="p"></w2:textbox>
                
                <xf:group class="form-section profile-image-section">
                    <w2:textbox class="section-title" label="프로필 사진 (선택)" tagname="div"></w2:textbox>
                    <xf:group class="image-upload-container">
                        <xf:group class="upload-area" onclick="document.getElementById('profileImageInput').click()">
                            <w2:textbox class="upload-icon" label="📷" tagname="div"></w2:textbox>
                            <w2:textbox class="upload-text" label="사진 업로드" tagname="div"></w2:textbox>
                        </xf:group>
                        
                        <xf:group class="preview-area">
                            <img class="preview-image" src="" alt="프로필 미리보기" />
                            <button class="image-remove-btn" onclick="scwin.removeImage()" type="button">×</button>
                        </xf:group>
                        
                        <input type="file" class="hidden-file-input" id="profileImageInput" 
                               accept="image/*" onchange="scwin.handleFileUpload(event)" />
                    </xf:group>
                </xf:group>
                
                <xf:group class="form-section additional-intro-section">
                    <w2:textbox class="section-title" label="추가 자기소개 (선택)" tagname="div"></w2:textbox>
                    <xf:group class="textarea-container">
                        <textarea class="additional-intro-textarea" 
                            placeholder="본인의 개발 철학이나 특별한 경험, 관심 분야 등을 자유롭게 작성해주세요."
                            oninput="scwin.updateCharCount(event)"
                            onkeyup="scwin.updateCharCount(event)"></textarea>
                        <w2:textbox class="char-count" id="additionalIntroCharCount" label="0/300" tagname="div"></w2:textbox>
                    </xf:group>
                </xf:group>
                
                <xf:group class="buttons-section">
                    <xf:trigger class="btn-back" ev:onclick="scwin.btn_back_onclick">
                        <xf:label>이전</xf:label>
                    </xf:trigger>
                    <xf:trigger class="btn-next" ev:onclick="scwin.btn_next_onclick">
                        <xf:label>완료</xf:label>
                    </xf:trigger>
                </xf:group>
            </xf:group>
        </xf:group>
    </body>
</html> 