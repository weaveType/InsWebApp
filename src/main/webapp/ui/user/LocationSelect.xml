        <script type="text/javascript"><![CDATA[
            var selectedLocationsList = [];
            
            scwin.onpageload = function() {
                console.log("Í∑ºÎ¨¥ÏßÄÏó≠ ÏÑ†ÌÉù ÌéòÏù¥ÏßÄ Î°úÎìúÎê®");
                scwin.updateSelectedLocationsDisplay();
                
                // Ïù¥Î≤§Ìä∏ ÏúÑÏûÑÏúºÎ°ú x Î≤ÑÌäº ÌÅ¥Î¶≠ Ï≤òÎ¶¨
                setTimeout(function() {
                    var container = document.querySelector('.selected-locations-container');
                    if (!container) {
                        container = document.getElementById('selectedLocationsContainer');
                    }
                    if (container) {
                        container.addEventListener('click', function(event) {
                            if (event.target && event.target.classList.contains('location-tag-remove')) {
                                var locationTag = event.target.closest('.location-tag');
                                if (locationTag) {
                                    var locationText = locationTag.textContent.replace(' √ó', '').trim();
                                    scwin.removeLocation(locationText);
                                }
                                event.preventDefault();
                                event.stopPropagation();
                            }
                        });
                    }
                }, 300);
            };
            
            scwin.toggleLocation = function(locationName) {
                console.log("ÏÑ†ÌÉùÎêú ÏßÄÏó≠:", locationName);
                var index = selectedLocationsList.indexOf(locationName);
                
                if (index > -1) {
                    selectedLocationsList.splice(index, 1);
                    var elements = document.querySelectorAll('.location-option');
                    if (elements && elements.length > 0) {
                        elements.forEach(function(el) {
                            if (el && el.textContent && el.classList && el.textContent.trim() === locationName) {
                                el.classList.remove('selected');
                            }
                        });
                    }
                } else {
                    selectedLocationsList.push(locationName);
                    var elements = document.querySelectorAll('.location-option');
                    if (elements && elements.length > 0) {
                        elements.forEach(function(el) {
                            if (el && el.textContent && el.classList && el.textContent.trim() === locationName) {
                                el.classList.add('selected');
                            }
                        });
                    }
                }
                
                console.log("ÌòÑÏû¨ ÏÑ†ÌÉùÎêú ÏßÄÏó≠Îì§:", selectedLocationsList);
                scwin.updateSelectedLocationsDisplay();
            };
            
            scwin.updateSelectedLocationsDisplay = function() {
                var container = document.querySelector('.selected-locations-container');
                var countDisplay = document.querySelector('.selection-count');
                
                if (!container) {
                    container = document.getElementById('selectedLocationsContainer');
                }
                if (!countDisplay) {
                    countDisplay = document.getElementById('selectionCount');
                }
                
                if (!container || !countDisplay) {
                    console.log("DOM ÏöîÏÜåÎ•º Ï∞æÏùÑ Ïàò ÏóÜÏäµÎãàÎã§. Ïû¨ÏãúÎèÑÌï©ÎãàÎã§.");
                    setTimeout(function() {
                        scwin.updateSelectedLocationsDisplay();
                    }, 300);
                    return;
                }
                
                container.innerHTML = '';
                
                if (selectedLocationsList.length === 0) {
                    container.innerHTML = '<div class="empty-message">Ìù¨ÎßùÌïòÎäî Í∑ºÎ¨¥ÏßÄÏó≠ÏùÑ ÏïåÎ†§Ï£ºÏÑ∏Ïöî.</div>';
                } else {
                    selectedLocationsList.forEach(function(location) {
                        var tag = document.createElement('div');
                        tag.className = 'location-tag';
                        tag.innerHTML = location + ' <span class="location-tag-remove">√ó</span>';
                        container.appendChild(tag);
                    });
                }
                
                countDisplay.textContent = selectedLocationsList.length + ' Í∞ú ÏßÄÏó≠ ÏÑ†ÌÉùÎê®';
                dma_location.set("selectedLocations", selectedLocationsList.join(','));
            };
            
            scwin.removeLocation = function(locationName) {
                scwin.toggleLocation(locationName);
            };
            
            // Function to proceed to next page with server save
            scwin.goToNextPage = function() {
                // ÏÑ†ÌÉùÎêú ÏßÄÏó≠Ïù¥ ÏûàÎäîÏßÄ ÌôïÏù∏
                if (selectedLocationsList.length === 0) {
                    alert("ÏµúÏÜå 1Í∞ú Ïù¥ÏÉÅÏùò ÏßÄÏó≠ÏùÑ ÏÑ†ÌÉùÌï¥Ï£ºÏÑ∏Ïöî.");
                    return;
                }
                
                // ÏÑ†ÌÉùÎêú ÏßÄÏó≠Îì§ÏùÑ ÏΩ§ÎßàÎ°ú Íµ¨Î∂ÑÎêú Î¨∏ÏûêÏó¥Î°ú Î≥ÄÌôò
                var locationsString = selectedLocationsList.join(',');
                
                // Îç∞Ïù¥ÌÑ∞ÎßµÏóê Îç∞Ïù¥ÌÑ∞ ÏÑ§Ï†ï (user_idÎäî Î∞±ÏóîÎìúÏóêÏÑú ÏÑ∏ÏÖòÏúºÎ°ú Ï≤òÎ¶¨)
                dma_location.set("locations", locationsString);
                
                console.log("ÏßÄÏó≠ Îç∞Ïù¥ÌÑ∞ Ï†ÑÏÜ°:", {
                    locations: locationsString
                });
                
                // ÏÑúÎ≤ÑÏóê Îç∞Ïù¥ÌÑ∞ Ï†ÄÏû•
                $c.sbm.execute(sbm_saveLocation);
            };
            
            // Success callback for location save
            scwin.sbm_saveLocation_submitdone = function(e) {
                console.log("Location save response:", e);
                
                var responseData = dma_location.getJSON();
                console.log("ÏùëÎãµ Îç∞Ïù¥ÌÑ∞:", responseData);
                
                if (responseData && (responseData.result === "success" || responseData.status === "success")) {
                    console.log("ÏßÄÏó≠ Ï†ïÎ≥¥ Ï†ÄÏû• ÏÑ±Í≥µ");
                    // Îã§Ïùå ÌéòÏù¥ÏßÄÎ°ú Ïù¥Îèô
                    $p.url("SalarySelect.xml");
                } else {
                    console.log("ÏßÄÏó≠ Ï†ïÎ≥¥ Ï†ÄÏû• ÏÑ±Í≥µ (Í∏∞Î≥∏ Ï≤òÎ¶¨)");
                    // ÏùëÎãµ Íµ¨Ï°∞ÏôÄ ÏÉÅÍ¥ÄÏóÜÏù¥ Îã§Ïùå ÌéòÏù¥ÏßÄÎ°ú Ïù¥Îèô
                    $p.url("SalarySelect.xml");
                }
            };
            
            // Error callback for location save
            scwin.sbm_saveLocation_submiterror = function(e) {
                console.error("Location save error:", e);
                alert("ÏßÄÏó≠ Ï†ïÎ≥¥ Ï†ÄÏû• Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.");
            };

            // Í∏∞Ï°¥ nextPage Ìï®ÏàòÎ•º ÏÉàÎ°úÏö¥ Ìï®ÏàòÎ°ú ÍµêÏ≤¥
            scwin.nextPage = function() {
                scwin.goToNextPage();
            };
            
            // Ïù¥Ï†Ñ Î≤ÑÌäº - $p.url Î∞©Ïãù
            scwin.btn_back_onclick = function() {
