            scwin.initializeTextarea = function() {
                // ÌÖçÏä§Ìä∏ ÏòÅÏó≠ Ïù¥Î≤§Ìä∏ Î¶¨Ïä§ÎÑà ÏÑ§Ï†ï
                var textarea = document.querySelector('.introduction-textarea');
                if (textarea) {
                    // Îã§ÏñëÌïú Ïù¥Î≤§Ìä∏Ïóê Í∏ÄÏûê Ïàò ÏóÖÎç∞Ïù¥Ìä∏ Ìï®Ïàò Î∞îÏù∏Îî©
                    textarea.addEventListener('input', scwin.updateCharCount);
                    textarea.addEventListener('keyup', scwin.updateCharCount);
                    textarea.addEventListener('change', scwin.updateCharCount);
                    textarea.addEventListener('paste', function() {
                        setTimeout(scwin.updateCharCount, 10);
                    });
                    
                    console.log("ÌÖçÏä§Ìä∏ ÏòÅÏó≠ Ïù¥Î≤§Ìä∏ Î¶¨Ïä§ÎÑà ÏÑ§Ï†ï ÏôÑÎ£å");
                }
                
                // Ï¥àÍ∏∞ Í∏ÄÏûê Ïàò ÌëúÏãú
                scwin.updateCharCount();
            };
            
            scwin.updateCharCount = function() {
                var textarea = document.querySelector('.introduction-textarea');
                var charCount = 0;
                
                if (textarea && textarea.value) {
                    charCount = textarea.value.length;
                    // Îç∞Ïù¥ÌÑ∞ Î™®Îç∏ÏóêÎèÑ ÏóÖÎç∞Ïù¥Ìä∏
                    dma_career.set("introduction", textarea.value);
                }
                
                // Í∏ÄÏûê Ïàò ÌëúÏãú ÏóÖÎç∞Ïù¥Ìä∏ (Ïó¨Îü¨ Î∞©Î≤ï ÏãúÎèÑ)
                var charCountElement = document.getElementById('charCount');
                if (charCountElement) {
                    charCountElement.textContent = charCount + '/500';
                }
                
                // ÌÅ¥ÎûòÏä§Î™ÖÏúºÎ°úÎèÑ ÏãúÎèÑ
                var charCountByClass = document.querySelector('.char-count');
                if (charCountByClass) {
                    charCountByClass.textContent = charCount + '/500';
                }
                
                console.log("Í∏ÄÏûê Ïàò ÏóÖÎç∞Ïù¥Ìä∏:", charCount + "/500");
                
                // Ìèº Ïú†Ìö®ÏÑ± Í≤ÄÏÇ¨
                scwin.validateForm();
            };
            
            scwin.selectCareerType = function(careerType) {
                dma_career.set("careerType", careerType);
                
                var careerButtons = document.querySelectorAll('.career-type-option');
                careerButtons.forEach(function(btn) {
                    if (btn.classList) {
                        btn.classList.remove('selected');
                    }
                });
                
                var selectedBtn = document.getElementById('career_' + careerType);
                if (selectedBtn && selectedBtn.classList) {
                    selectedBtn.classList.add('selected');
                }
                
                var experienceSection = document.getElementById('experienceSection');
                if (experienceSection) {
                    if (careerType === 'Ïã†ÏûÖ') {
                        experienceSection.style.display = 'none';
                        dma_career.set("careerPeriod", "0ÎÖÑ");
                    } else {
                        experienceSection.style.display = 'block';
                    }
                }
                
                scwin.validateForm();
            };
            
            scwin.selectCareerPeriod = function(period) {
                dma_career.set("careerPeriod", period);
                
                var periodButtons = document.querySelectorAll('.period-option');
                periodButtons.forEach(function(btn) {
                    if (btn.classList) {
                        btn.classList.remove('selected');
                    }
                });
                
                var selectedBtn = document.getElementById('period_' + period.replace(/[^0-9]/g, ''));
                if (selectedBtn && selectedBtn.classList) {
                    selectedBtn.classList.add('selected');
                }
                
