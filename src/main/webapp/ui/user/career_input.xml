            scwin.onpageload = function() {
                console.log("Í≤ΩÎ†• ÏûÖÎ†• ÌéòÏù¥ÏßÄ Î°úÎìúÎê®");
                
                // ÌéòÏù¥ÏßÄ Î°úÎìú ÌõÑ Ï¥àÍ∏∞Ìôî
                setTimeout(function() {
                    scwin.selectCareerType('Ïã†ÏûÖ');
