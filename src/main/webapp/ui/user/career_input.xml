            };
            
            scwin.validateForm = function() {
                var careerType = dma_career.get("careerType");
                var careerPeriod = dma_career.get("careerPeriod");
                
                // ÌÖçÏä§Ìä∏ ÏòÅÏó≠ÏóêÏÑú ÏßÅÏ†ë Í∞í Í∞ÄÏ†∏Ïò§Í∏∞
                var textarea = document.querySelector('.introduction-textarea');
                var introduction = textarea ? textarea.value : "";
                
                var isValid = false;
                
                if (careerType === 'Ïã†ÏûÖ') {
                    isValid = introduction && introduction.trim().length >= 50;
                } else {
                    isValid = careerPeriod && introduction && introduction.trim().length >= 50;
                }
                
                var nextBtn = document.getElementById('btn_next');
                if (nextBtn) {
