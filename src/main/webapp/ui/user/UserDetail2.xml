<?xml version="1.0" encoding="UTF-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:w2="http://www.inswave.com/websquare"
	xmlns:xf="http://www.w3.org/2002/xforms">

	<head meta_screenName="개인정보 수정">
		<w2:type>COMPONENT</w2:type>
		<w2:buildDate />
		<w2:MSA />
		<xf:model>
			<w2:dataCollection baseNode="map">
				<w2:dataMap baseNode="map" id="dma_userInfoVo">
					<w2:keyInfo>
						<w2:key id="accountId" name="계정 ID" dataType="number"></w2:key>
						<w2:key id="name" name="사용자명" dataType="text"></w2:key>
						<w2:key id="career" name="경력수준" dataType="text"></w2:key>
						<w2:key id="preferredLocations" name="지역" dataType="text"></w2:key>
						<w2:key id="currentPosition" name="직무분야" dataType="text"></w2:key>
						<w2:key id="yearSalary" name="희망연봉" dataType="number"></w2:key>
						<w2:key id="isMbtiChecked" name="MBTI완료여부" dataType="text"></w2:key>
						<w2:key id="isCodeChecked" name="코드분석완료여부" dataType="text"></w2:key>
					</w2:keyInfo>
				</w2:dataMap>
			</w2:dataCollection>
			<xf:submission id="sbm_userDetail" action="/InsWebApp/US0002UpdView.pwkjson" method="post" mediatype="application/json"
				ref='data:json,{"id":"dma_userInfoVo", "key":"userInfoVo"}' target='data:json,{"id":"dma_userInfoVo", "key":"elData"}' encoding="UTF-8" instance="" replace="" errorHandler=""
				customHandler="" mode="asynchronous" processMsg="유저 정보 조회중" ev:submit="" ev:submitdone="scwin.updateCardStatus" ev:submiterror="" abortTrigger="">
			</xf:submission>
		</xf:model>
		<w2:layoutInfo />
		<w2:publicInfo method="" />

		<style type="text/css"><![CDATA[
        /* 사이드바 */
        .sidebar {
            width: 280px;
            background-color: #ffffff;
            border-right: 1px solid #e0e0e0;
            padding: 20px 20px 20px 5px;
            flex-shrink: 0;
        }

        .main-container {
            display: flex;
        }

        .sidebar-title {
            font-size: clamp(18px, 3vw, 20px);
            font-weight: bold;
            color: #333;
            margin-bottom: 30px;
            margin-left: 0px; /* 제목 좌측 여백 제거 */
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .menu-category {
            margin-bottom: 30px;
        }

        .menu-category-title {
            font-size: clamp(14px, 2vw, 16px);
            font-weight: 600;
            color: #666;
            margin-bottom: 15px;
            padding-bottom: 8px;
            padding-left: 5px;
            border-bottom: 1px solid #f0f0f0;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 12px 16px 12px 8px;
            margin-bottom: 4px;
            color: #333;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.2s ease;
            cursor: pointer;
            font-size: clamp(13px, 1.8vw, 14px);
            position: relative;
        }

        .menu-item:hover {
            background-color: #f8f9fa;
            color: #007bff;
        }

        .menu-item.active {
            background-color: #e3f2fd;
            color: #1976d2;
            font-weight: 600;
        }

        .menu-item.incomplete {
            color: #dc3545;
        }

        .menu-item.incomplete::after {
            content: "미완료";
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 10px;
            background-color: #dc3545;
            color: white;
            padding: 2px 6px;
            border-radius: 8px;
        }

        .new-badge {
            background-color: #ff4757;
            color: white;
            font-size: 10px;
            padding: 2px 6px;
            border-radius: 8px;
            margin-left: 8px;
        }

        /* 메인 콘텐츠 */
        .main-content {
            flex: 1;
            padding: min(30px, 4vw);
            overflow-y: auto;
        }

        /* 사용자 프로필 헤더 */
        .profile-header {
            background-color: white;
            border-radius: 12px;
            padding: min(30px, 4vw);
            margin-bottom: 24px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .profile-info {
            display: flex;
            align-items: center;
            gap: 20px;
            flex: 1;
            min-width: 0;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: #f0f0f0; /* 이미지 로딩 전 배경색 */
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            overflow: hidden; /* 이미지가 원형 영역을 벗어나지 않도록 */
        }

        .profile-career {
            margin: 4px 0 8px 0;
        }

        .profile-details h2 {
            font-size: clamp(20px, 3.5vw, 24px);
            font-weight: bold;
            color: #333;
            margin: 0 0 4px 0; /* 하단 마진 줄임 */
        }

        .status-badge {
            background-color: #28a745;
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: clamp(11px, 1.5vw, 12px);
            font-weight: 500;
        }

        /* 매칭 토글 */
        .matching-toggle {
            display: flex;
            align-items: center;
            gap: 12px;
            flex-shrink: 0;
        }

        .toggle-label {
            font-size: clamp(14px, 2vw, 16px);
            font-weight: 600;
            color: #333;
        }

        .toggle-switch {
            position: relative;
            width: 60px;
            height: 30px;
            background-color: #28a745;
            border-radius: 15px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .toggle-switch.off {
            background-color: #ccc;
        }

        .toggle-switch::after {
            content: '';
            position: absolute;
            top: 3px;
            left: 3px;
            width: 24px;
            height: 24px;
            background-color: white;
            border-radius: 50%;
            transition: transform 0.3s ease;
        }

        .toggle-switch.off::after {
            transform: translateX(0);
        }

        .toggle-switch:not(.off)::after {
            transform: translateX(30px);
        }
        
        /* 반응형 디자인 */
        @media (max-width: 1024px) {
            .main-container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                border-right: none;
                border-bottom: 1px solid #e0e0e0;
                padding: 15px 15px 15px 10px;
            }

            .sidebar-menu {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 20px;
            }

        }

        @media (max-width: 768px) {
            .sidebar {
                padding: 15px;
            }
        }

        @media (max-width: 480px) {
            .sidebar, .main-content {
                padding: 10px;
            }
        }
        ]]></style>

		<script lazy="false" type="text/javascript"><![CDATA[
scwin.onpageload = function () {
    try {
        var userInfoStr = WebSquare.cookie.getCookie("userInfo");
        if (userInfoStr) {
            var userInfo = JSON.parse(userInfoStr);
            if (userInfo && userInfo.accountId) {
                dma_userInfoVo.set("accountId", userInfo.accountId);
                // 서버 통신
                $c.sbm.execute($p, sbm_userDetail);
            } else {
                console.error("유효하지 않은 사용자 정보 쿠키입니다.");
            }
        } else {
            console.log("로그인 상태가 아닙니다.");
            // 필요 시 로그인 페이지로 리디렉션 또는 다른 처리
        }
    } catch (e) {
        console.error("페이지 로드 중 오류 발생:", e);
    }
};

// 프로필 메뉴 클릭 이벤트
scwin.menu_profile_onclick = function() {
    contentFrame.setSrc('UserDetail3.xml');
};

// 지원현황 메뉴 클릭 이벤트
scwin.menu_history_onclick = function() {
    contentFrame.setSrc('ApplicationHistory2.xml');
};

// 관심기업 메뉴 클릭 이벤트
scwin.menu_interest_onclick = function() {
    alert("관심기업 페이지는 준비중입니다.");
};

// MBTI 검사 시작
scwin.startMbti_onclick = function () {
    alert("MBTI 성격 검사를 시작합니다.");
};

// 코드분석 시작
scwin.startCodeAnalysis_onclick = function () {
    alert("코드분석을 시작합니다.");
};

scwin.btn_userUpdate_onclick = function (e) {
    $p.url("updateUser.xml");
};
]]></script>
	</head>

	<body ev:onpageload="scwin.onpageload">
		<w2:wframe src="../common/Header.xml" id="headerFrame" />
		<xf:group class="main-wrap">
			<!-- 메인 컨테이너 -->
			<xf:group class="main-container">
				<!-- 사이드바 -->
				<aside class="sidebar">
					<w2:textbox label="내 정보" class="menu-category-title"></w2:textbox>
					<w2:anchor id="menu_profile" class="menu-item active incomplete" ev:onclick="scwin.menu_profile_onclick">
						<xf:label><![CDATA[프로필]]></xf:label>
					</w2:anchor>
					<w2:anchor id="menu_history" class="menu-item" ev:onclick="scwin.menu_history_onclick">
						<xf:label><![CDATA[지원현황]]></xf:label>
					</w2:anchor>
					<w2:anchor id="menu_interest" class="menu-item">
						<xf:label><![CDATA[관심기업]]></xf:label>
					</w2:anchor>
				</aside>

				<!-- 메인 콘텐츠 -->
				<w2:pageFrame style="width:969px;height:271px;" id="contentFrame" src="/InsWebApp/ui/user/UserDetail3.xml"></w2:pageFrame>
			</xf:group>
		</xf:group>
	</body>
</html>